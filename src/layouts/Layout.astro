---
import { Icon } from "astro-icon/components";
import { When } from "@astropub/flow";
import "@fontsource/source-sans-pro/400.css";
import "@fontsource/source-sans-pro/700.css";
import "@fontsource/source-sans-pro/900.css";

interface Props {
  title: string;
  showHeader?: boolean;
  showHeaderIcons?: boolean;
}

const { title, showHeader = true, showHeaderIcons = true } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#2b5797" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <When test1={showHeader}>
      <header>
        <div class="slot left">
          <button
            class="icon-button"
            onclick="window.location.href='/gamehome'"
            aria-label="Zur Startseite"
          >
            <Icon name="home" width={24} height={22.24} aria-hidden="true" />
            <span class="sr-only">Startseite</span>
          </button>
          <When test={showHeaderIcons}>
            <button
              class="icon-button"
              onclick="window.location.href='/spielregeln'"
              aria-label="Spielregeln anzeigen"
            >
              <Icon
                name="question"
                width={24}
                height={22.24}
                aria-hidden="true"
              />
              <span class="sr-only">Spielregeln</span>
            </button>
            <button
              class="icon-button"
              onclick="window.location.href='/highscores'"
              aria-label="Bestenliste anzeigen"
            >
              <Icon name="trophy" width={24} height={24} aria-hidden="true" />
              <span class="sr-only">Bestenliste</span>
            </button>
          </When>
          <slot name="left-headercol" />
        </div>
        <div class="slot right">
          <When test={showHeaderIcons}>
            <button
              class="icon-button"
              onclick="window.location.href='/user'"
              aria-label="Benutzerprofil"
            >
              <Icon name="user" width={24} height={24} aria-hidden="true" />
              <span class="sr-only">Profil</span>
            </button>
            <form method="post" action="/api/logout">
              <button class="icon-button" aria-label="Abmelden">
                <Icon name="logout" width={24} height={24} aria-hidden="true" />
                <span class="sr-only">Abmelden</span>
              </button>
            </form>
          </When>
        </div>
      </header>
    </When>

    <main>
      <slot />
    </main>

    <style lang="scss" is:global>
      :root {
        /* Farben mit verbessertem Kontrast */
        --secondary-color: #e1e1f0;
        --highlight-color: #e6b800;
        --background-color: #a0a4c5;
        --text-color: #1a1a1a;
        --error-color: #d94f2b;
        --button-hover-color: #cc9900;
        --button-text-color: #000000;

        /* Fokus-Indikatoren */
        --focus-outline-color: #005fcc;
        --focus-outline-width: 3px;
        --focus-outline-offset: 2px;

        /* Schrift */
        --font-family: "Source Sans Pro", system-ui, sans-serif;
        --header-font-size: clamp(1.25rem, 2vw, 1.5rem);
        --body-font-size: clamp(1rem, 1.5vw, 1.125rem);
        --button-font-size: clamp(0.875rem, 1.25vw, 1rem);

        /* Größen und Abstände */
        --padding-small: max(8px, 0.5rem);
        --padding-medium: max(16px, 1rem);
        --padding-large: max(32px, 2rem);
        --border-radius: 12px;

        /* Interaktive Elemente */
        --min-touch-target: 44px;
        --box-shadow: 0 5px 10px rgb(0 0 0 / 20%);
        --transition-speed: 0.2s;

        /* Zusätzliche Barrierefreiheits-Variablen */
        --line-height-body: 1.6;
        --max-line-length: 70ch;
        --spacing-text: 0.05em;

        /* Größen */
        --size-playlist-small: 7.438rem;
        --size-playlist-large: 10.313rem;

        /* Overlay */
        --color-overlay: rgb(0 0 0 / 60%);

        /* Opacity */
        --opacity-disabled: 0.4;

        /* Z-Index */
        --layer-above: 2;
      }

      html {
        box-sizing: border-box;
        margin: var(--padding-small);
        font-family: var(--font-family);
        background-color: var(--background-color);
      }

      *,
      *::before,
      *::after {
        box-sizing: inherit;
      }

      body {
        width: 100%;
        max-width: 768px;
        margin: 0 auto;
        padding: 0 var(--padding-medium);

        font-size: var(--body-font-size);
        line-height: var(--line-height-body);
        letter-spacing: var(--spacing-text);
        color: var(--text-color);

        background-color: var(--background-color);
      }

      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .slot {
        display: flex;
        gap: var(--padding-small);
        align-items: center;
      }

      .slot.left,
      .slot.right {
        flex: 1;
      }

      .slot.right {
        justify-content: flex-end;
      }

      .logo {
        display: flex;
        justify-content: center;
      }

      .logo img {
        max-width: 100%;
        height: auto;
      }

      button {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        display: inline-block;
        transition: transform var(--transition-speed);
      }

      .icon-button {
        min-width: var(--min-touch-target);
        min-height: var(--min-touch-target);
        background-color: var(--highlight-color);
        border-radius: var(--border-radius);
        padding: var(--padding-small);
        box-shadow: var(--box-shadow);
        transition: all var(--transition-speed);

        &:hover {
          background-color: var(--button-hover-color);
          transform: scale(1.05);
        }

        &:focus-visible {
          outline: var(--focus-outline-width) solid var(--focus-outline-color);
          outline-offset: var(--focus-outline-offset);
        }
      }

      main {
        padding: var(--padding-medium) 0;
        font-size: var(--body-font-size);
        line-height: 1.6;
        color: var(--text-color);
        max-width: var(--max-line-length);
        margin: 0 auto;
      }

      .hasMargin {
        margin: 0 var(--padding-small);
      }

      .button {
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;

        // Neue Größen-Eigenschaften
        min-height: var(--min-touch-target);
        padding: var(--padding-small) var(--padding-large);
        font-size: var(--button-font-size);

        opacity: 1;
        background-color: var(--highlight-color);
        border: none;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        color: var(--button-text-color);
        text-decoration: none;

        transition: all var(--transition-speed);

        &:hover {
          transform: scale(1.05);
          background-color: var(--button-hover-color);
          color: var(--button-text-color);
        }

        // Neue Focus-Styles
        &:focus-visible {
          outline: var(--focus-outline-width) solid var(--focus-outline-color);
          outline-offset: var(--focus-outline-offset);
          transform: none; // Verhindert Skalierung während des Fokus
        }

        &.hidden {
          overflow: hidden;
          height: 0;
          margin: 0;
          padding: 0;
          opacity: 0;
        }
      }

      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        border: 0;
      }

      /* Media Queries für Barrierefreiheit */
      @media (prefers-reduced-motion: reduce) {
        :root {
          --transition-speed: 0s;
        }

        .button:hover,
        .icon-button:hover {
          transform: none;
        }
      }

      @media (prefers-contrast: high) {
        :root {
          --highlight-color: #000000;
          --text-color: #000000;
          --background-color: #ffffff;
          --button-text-color: #ffffff;
          --button-hover-color: #000000;
        }
      }
    </style>
  </body>
</html>
