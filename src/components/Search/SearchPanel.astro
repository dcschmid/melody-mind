---
/**
 * Lightweight Search Panel
 *
 * Provides the consistent markup needed by `initSearchPanel` without the previous
 * prop explosion. Only the essentials remain: ids/labels and optional text templates
 * for the auto-managed status + no-results helpers.
 */
export interface Props {
  idBase: string;
  label: string;
  placeholder: string;
  ariaControls: string;
  /** Analytics surface key for result-click tracking */
  analyticsSurface?: string;
  /** Text shown when all items visible */
  statusAllText?: string;
  /** Template for results count (use {count}) */
  statusCountTemplate?: string;
  /** Template for no results (use {term}) */
  noResultsTemplate?: string;
}

const {
  idBase,
  label,
  placeholder,
  ariaControls,
  analyticsSurface = "unknown",
  statusAllText = "Showing all",
  statusCountTemplate = "{count} results",
  noResultsTemplate = 'No results for "{term}"',
} = Astro.props as Props;

const inputId = `${idBase}-input`;
const clearId = `${idBase}-clear`;
const resetId = `${idBase}-reset`;
const statusId = `${idBase}-status`;
const noResultsId = `${idBase}-no-results`;
const inputClasses = "search-panel__input";
---

<div class="search-panel" data-search-root data-search-surface={analyticsSurface}>
  <div class="search-panel__bar">
    <div class="search-panel__field">
      <label for={inputId} class="search-panel__sr">{label}</label>
      <div class="search-panel__icon">
        <svg aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <input
        id={inputId}
        type="search"
        class={inputClasses}
        {placeholder}
        aria-controls={ariaControls}
        aria-describedby={statusId}
        autocomplete="off"
        data-search-input
      />
      <button
        id={clearId}
        class="search-panel__clear"
        type="button"
        aria-label="Clear search"
        data-search-clear
        hidden
        aria-hidden="true"
        tabindex="-1"
      >
        <svg aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <button
      id={resetId}
      class="search-panel__reset"
      type="button"
      aria-label="Reset search"
      aria-controls={ariaControls}
      data-search-reset
    >
      <svg
        class="search-panel__reset-icon"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 4v6h6M20 20v-6h-6"></path>
      </svg>
      <span>Reset</span>
    </button>
  </div>
  <div class="search-panel__meta">
    <div
      id={statusId}
      data-search-status
      class="search-panel__status"
      role="status"
      aria-live="polite"
      aria-atomic="true"
      data-search-status-all={statusAllText}
      data-search-status-count={statusCountTemplate}
    >
    </div>
    <div
      id={noResultsId}
      data-search-no-results
      hidden
      data-search-no-results-tpl={noResultsTemplate}
      class="search-panel__no-results"
      role="status"
      aria-live="polite"
      aria-atomic="true"
    >
    </div>
    <slot name="status" />
    <slot name="no-results" />
  </div>
</div>
<style>
  .search-panel {
    width: 100%;
    display: grid;
    gap: 0.9rem;
  }

  :global(.search-panel-shell) {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    inline-size: 100%;
    max-inline-size: var(--search-shell-max-inline-size, none);
    min-block-size: var(--search-shell-min-block-size, auto);
    padding: 0.85rem 1rem;
    background: color-mix(in srgb, var(--gn-bg-muted) 88%, transparent);
    border: 1px solid color-mix(in srgb, var(--gn-panel-border) 70%, transparent);
    border-radius: 1.25rem;
    box-shadow: var(--gn-offset-shadow);
  }

  :global(.search-panel-shell)::after {
    position: absolute;
    inset: 6px;
    pointer-events: none;
    content: "";
    border: 1px solid var(--gn-panel-inner);
    border-radius: 1rem;
  }

  @media (width >= 640px) {
    :global(.search-panel-shell) {
      padding: 1rem 1.2rem;
    }
  }

  :global(.search-panel-shell .search-panel) {
    gap: 0.6rem;
  }

  .search-panel__bar {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .search-panel__field {
    position: relative;
    flex: 1 1 18rem;
    min-width: 0;
  }

  .search-panel__sr {
    position: absolute;
    width: var(--sr-only-width);
    height: var(--sr-only-height);
    padding: 0;
    margin: var(--sr-only-margin);
    overflow: hidden;
    clip-path: var(--sr-only-clip-path);
    white-space: nowrap;
    border: 0;
  }

  .search-panel__icon {
    position: absolute;
    inset-block: 0;
    left: 0;
    display: flex;
    align-items: center;
    padding-left: 1.25rem;
    color: color-mix(in srgb, var(--gn-ink) 70%, transparent);
    pointer-events: none;
  }

  .search-panel__icon svg {
    display: block;
    width: 1.5rem;
    height: 1.5rem;
  }

  .search-panel__input {
    width: 100%;
    border-radius: 999px;
    border: 1px solid color-mix(in srgb, var(--gn-panel-border) 70%, transparent);
    background: linear-gradient(
      140deg,
      color-mix(in srgb, var(--gn-bg) 90%, transparent),
      color-mix(in srgb, var(--gn-bg-muted) 80%, transparent)
    );
    padding: 0.9rem 3.75rem 0.9rem 3.1rem;
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--gn-ink);
    box-shadow:
      0 10px 24px rgba(7, 12, 24, 0.25),
      inset 0 1px 0 color-mix(in srgb, var(--gn-ink) 8%, transparent);
    transition:
      border-color var(--transition-fast),
      box-shadow var(--transition-fast),
      background-color var(--transition-fast),
      transform var(--transition-fast);
  }

  @media (min-width: 640px) {
    .search-panel__input {
      padding: 1.05rem 4rem 1.05rem 3.4rem;
      font-size: 1.15rem;
    }
  }

  .search-panel__input::placeholder {
    color: var(--gn-ink-muted);
  }

  .search-panel__input:hover {
    border-color: color-mix(in srgb, var(--color-gn-amber-300) 70%, transparent);
    box-shadow:
      0 12px 26px rgba(7, 12, 24, 0.32),
      inset 0 1px 0 color-mix(in srgb, var(--gn-ink) 10%, transparent);
    transform: translateY(-1px);
  }

  .search-panel__input:focus-visible {
    outline: none;
    border-color: color-mix(in srgb, var(--color-gn-amber-300) 80%, transparent);
    box-shadow:
      0 0 0 4px color-mix(in srgb, var(--color-gn-amber-300) 35%, transparent),
      0 16px 28px rgba(7, 12, 24, 0.38);
  }

  .search-panel__clear {
    position: absolute;
    inset-block: 0;
    right: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 44px;
    padding-right: 0.85rem;
    padding-left: 0.35rem;
    color: color-mix(in srgb, var(--gn-ink) 70%, transparent);
    background: transparent;
    border: none;
    cursor: pointer;
    transition:
      color var(--transition-fast),
      transform var(--transition-fast);
  }

  .search-panel__clear svg {
    width: 1.2rem;
    height: 1.2rem;
    padding: 0.35rem;
    border-radius: 999px;
    background: color-mix(in srgb, var(--gn-bg) 75%, transparent);
    box-shadow: inset 0 0 0 1px color-mix(in srgb, var(--gn-ink) 10%, transparent);
  }

  .search-panel__clear:hover {
    color: var(--color-gn-amber-300);
    transform: translateY(-1px);
  }

  .search-panel__clear:focus-visible {
    outline: 2px solid color-mix(in srgb, var(--color-gn-amber-300) 70%, transparent);
    outline-offset: 3px;
  }

  .search-panel__reset {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    min-height: 44px;
    padding: 0.7rem 1.35rem;
    cursor: pointer;
    border-radius: 999px;
    border: 1px solid color-mix(in srgb, var(--gn-panel-border) 70%, transparent);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-gn-amber-400) 85%, transparent),
      color-mix(in srgb, var(--color-gn-amber-300) 75%, transparent)
    );
    color: var(--color-gn-soot-950);
    font-weight: 600;
    box-shadow:
      0 12px 24px rgba(7, 12, 24, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.45);
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      background-color var(--transition-fast);
    white-space: nowrap;
  }

  .search-panel__reset:hover {
    transform: translateY(-1px);
    box-shadow:
      0 16px 28px rgba(7, 12, 24, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.5);
  }

  .search-panel__reset:focus-visible {
    outline: 2px solid color-mix(in srgb, var(--color-gn-amber-300) 70%, transparent);
    outline-offset: 3px;
  }

  .search-panel__reset-icon {
    display: block;
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
  }

  .search-panel__meta {
    display: grid;
    gap: 0.35rem;
    padding-inline-start: 0.25rem;
  }

  .search-panel__status {
    text-align: left;
    font-size: 1rem;
    color: var(--gn-ink-muted);
  }

  @media (min-width: 640px) {
    .search-panel__status {
      font-size: 1.05rem;
    }
  }

  .search-panel__no-results {
    text-align: left;
    font-size: 1rem;
    color: var(--gn-ink-muted);
  }

  @supports (backdrop-filter: blur(12px)) {
    .search-panel__input {
      backdrop-filter: blur(14px);
    }
  }
</style>
