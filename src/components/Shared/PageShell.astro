---
interface Props {
  className?: string;
  containerClass?: string;
  overlayClass?: string;
  includeOverlay?: boolean;
}

const {
  className = "",
  containerClass = "",
  overlayClass = "",
  includeOverlay = true,
} = Astro.props as Props;

const rootClasses = ["page-shell", className].filter(Boolean).join(" ");
const overlayClasses = ["page-shell__overlay", overlayClass].filter(Boolean).join(" ");
const containerClasses = ["page-shell__container", containerClass]
  .filter(Boolean)
  .join(" ");
---

<div class={rootClasses}>
  {includeOverlay && <div class={overlayClasses} aria-hidden="true" />}
  <div class={containerClasses}>
    <slot />
  </div>
</div>
<style>
  .page-shell {
    position: relative;
    min-block-size: 100vb;
    color: var(--gn-ink);
  }

  .page-shell__overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .page-shell__container {
    position: relative;
    max-inline-size: 72rem;
    padding: 2.5rem 1rem 4rem;
    margin: 0 auto;
  }

  .page-shell__container--wide {
    max-inline-size: 82rem;
  }

  .page-shell__container--spacious {
    padding: 3rem 1rem;
  }

  @media (width >= 640px) {
    .page-shell__container {
      padding: 3rem 1.5rem 4.5rem;
    }

    .page-shell__container--spacious {
      padding: 3.5rem 1.5rem;
    }
  }

  @media (width >= 1024px) {
    .page-shell__container {
      padding: 3.5rem 2rem 5rem;
    }

    .page-shell__container--spacious {
      padding: 4rem 2rem;
    }
  }

  @media (width >= 1280px) {
    .page-shell__container--wide {
      max-inline-size: 88rem;
    }
  }

  .page-shell--aurora {
    background: linear-gradient(145deg, #0a0f18 0%, #0c121c 45%, #0a1320 100%);
  }

  .page-shell--grid::after {
    position: absolute;
    inset: 0;
    pointer-events: none;
    content: "";
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 56px 56px;
    opacity: 0.22;
    mask-image: linear-gradient(
      180deg,
      transparent 0%,
      rgba(0, 0, 0, 0.6) 10%,
      rgba(0, 0, 0, 0.9) 100%
    );
  }
</style>
