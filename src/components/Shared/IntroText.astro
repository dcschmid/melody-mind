---
const { headline, subline } = Astro.props;
---

<div class="introText">
  <div class="headline">
    {headline}
  </div>
  <div class="subline">
    {subline}
  </div>
</div>

<style lang="scss">
  .introText {
    display: flex;
    flex-direction: column;
    gap: var(--padding-small); /* Nutze deine Spacing-Variablen */
    align-items: center;
    margin-bottom: var(--padding-small); /* Konsistenter Abstand */
  }

  .headline {
    font-weight: 900;
    font-size: 1.5rem; /* Nutze hier die Fontgröße direkt */
    line-height: 1.5;
    font-family: var(
      --font-family
    ); /* Nutze die Schriftfamilie aus deinen Variablen */
  }

  .subline {
    width: 100%;
    max-width: 30rem;
    font-size: var(--body-font-size); /* Nutze die body-font-size Variable */
    line-height: 1.5;
    color: var(--secondary-color); /* Nutze die Akzentfarbe */
    text-align: center;
  }
</style>
