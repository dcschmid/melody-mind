---
import { Icon } from "astro-icon/components";
---

<div class="coins">
  <div class="count">
    <Icon class="icon" name="coin" width={24} height={24} />
    <span class="coinsCount"></span>
  </div>
</div>

<style lang="scss">
  .coins {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    align-items: center;

    color: var(--text-color);
  }

  .count {
    display: flex;
    align-items: center;
  }

  .icon {
    margin-right: 0.25rem;
  }
</style>
