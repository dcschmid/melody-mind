<div
  class="flex items-center gap-2 rounded-lg font-primary"
  role="navigation"
  aria-label={t("language.picker.label")}
>
  <div class="relative flex items-center">
    <select
      id="language-select"
      class="min-h-[44px] w-full min-w-[44px] cursor-pointer appearance-none border-2 border-purple-500 rounded-xl px-4 py-2 pr-10 bg-gradient-to-r from-purple-600 to-purple-700 text-white text-base font-semibold shadow-lg hover:shadow-xl transition-all duration-300 ease-out hover:from-purple-700 hover:to-purple-800 hover:-translate-y-1 focus:from-purple-700 focus:to-purple-800 focus:outline-none focus:ring-4 focus:ring-purple-300 focus:ring-offset-2 active:scale-95 md:min-w-[72px] md:px-5 md:py-3 sm:px-3 sm:py-2 sm:text-sm sm:pr-8"
      value={getRelativeLocaleUrl(String(lang), cleanPath)}
      aria-label={t("language.select.label")}
      onchange="
        const newLang = this.value.split('/')[1];
        localStorage.setItem('preferred-language', newLang);
        window.location.href = this.value;
      "
    >
      {
        Object.entries(languages).map(([code, { name, flag }]) => {
          const url = getRelativeLocaleUrl(code, cleanPath);
          return (
            <option value={url} selected={code === lang}>
              {flag} {name}
            </option>
          );
        })
      }
    </select>

    <div
      class="absolute top-0 bottom-0 right-0 flex items-center justify-center px-3 pointer-events-none text-white/90 transition-all duration-300 sm:px-2"
    >
      <Icon
        name="chevron-down"
        class="h-5 w-5 fill-current transition-all duration-300 ease-out sm:h-4 sm:w-4"
        aria-hidden="true"
      />
    </div>
  </div>

  <div
    class="absolute w-px h-px p-0 -m-px overflow-hidden whitespace-nowrap border-0"
    aria-live="polite"
  >
    {t("language.selected", { language: languages[lang as keyof typeof languages]?.name || lang })}
  </div>
</div>

<script>
  // Simple arrow rotation on focus
  document.addEventListener("DOMContentLoaded", () => {
    const select = document.getElementById("language-select");
    const arrow = document.querySelector(".arrow-container svg") as HTMLElement | null;

    if (select && arrow) {
      select.addEventListener("focus", () => {
        if (arrow) {
          arrow.style.transform = "rotate(180deg)";
        }
      });

      select.addEventListener("blur", () => {
        if (arrow) {
          arrow.style.transform = "rotate(0deg)";
        }
      });
    }
  });
</script>
