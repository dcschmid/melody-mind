---
/**
 * Footer Component - Responsive & Accessible
 *
 * A comprehensive site-wide footer with copyright, legal links, and external links.
 * Fully responsive with WCAG AAA compliance and optimized for all screen sizes.
 *
 * @component
 * @example
 * ```astro
 * <Footer />
 * ```
 */
import { useTranslations, getLangFromUrl } from "@utils/i18n";
import { Icon } from "astro-icon/components";
import { getRelativeLocaleUrl } from "astro:i18n";

// Get current language for i18n
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(String(lang));

/**
 * Dynamic copyright year calculation
 */
const currentYear = new Date().getFullYear();

/**
 * Legal links configuration for each language with fallback support
 */
const nativeLanguages = ["en", "de"];

const getLegalPageUrl = (page: "legal-notice" | "privacy-policy"): string => {
  if (nativeLanguages.includes(lang)) {
    if (lang === "de") {
      return getRelativeLocaleUrl(lang, page === "legal-notice" ? "impressum" : "datenschutz");
    }
    return getRelativeLocaleUrl("en", page);
  }
  return getRelativeLocaleUrl("en", page);
};

const legalLinks = [
  {
    href: getLegalPageUrl("legal-notice"),
    label: t("footer.impressum"),
    ariaLabel: t("footer.impressum_aria"),
  },
  {
    href: getLegalPageUrl("privacy-policy"),
    label: t("footer.privacy"),
    ariaLabel: t("footer.privacy_aria"),
  },
];

/**
 * External link configuration with accessibility and i18n support
 */
const links = [
  {
    href: "https://github.com/dcschmid/melody-mind",
    icon: "github",
    label: "GitHub",
    ariaLabel: t("footer.source_code"),
  },
  {
    href: "https://www.paypal.me/dcschmid",
    icon: "paypal",
    label: t("footer.donate"),
    ariaLabel: t("footer.donate_aria"),
  },
  {
    href: "https://www.buymeacoffee.com/dcschmid",
    icon: "kofi",
    label: "Ko-fi",
    ariaLabel: t("footer.support_kofi"),
  },
];

const linkClasses = "footer-link";
---

<footer class="footer" role="contentinfo" aria-label="Site footer">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Copyright and Legal Links -->
      <div class="footer-left">
        <div class="footer-copyright">
          &copy; {currentYear} MelodyMind - {t("footer.rights")}
        </div>
        <nav aria-label="Legal information" class="footer-legal">
          {
            legalLinks.map((link) => (
              <a href={link.href} class="footer-legal-link" aria-label={link.ariaLabel}>
                {link.label}
              </a>
            ))
          }
        </nav>
      </div>

      <!-- External Links -->
      <nav aria-label="Footer links" class="footer-nav">
        <!-- GitHub Link -->
        <a
          href={links[0].href}
          target="_blank"
          rel="noopener noreferrer"
          class={linkClasses}
          aria-label={links[0].ariaLabel}
        >
          <Icon name={links[0].icon} width="16" height="16" aria-hidden="true" focusable="false" />
          <span>{links[0].label}</span>
          <span class="sr-only">(opens in a new tab)</span>
        </a>

        <!-- Donation Links -->
        {
          links.slice(1).map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class={linkClasses}
              aria-label={link.ariaLabel}
            >
              <Icon name={link.icon} width="16" height="16" aria-hidden="true" focusable="false" />
              <span>{link.label}</span>
              <span class="sr-only">(opens in a new tab)</span>
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>

<style lang="scss">
  /* ======================================
   * FOOTER COMPONENT STYLES
   * Responsive design with global.css variables
   * WCAG AAA compliant - Zero hardcoded values
   * ====================================== */

  .footer {
    margin-top: var(--space-3xl);
    border-top: var(--border-width-thin) solid var(--border-primary);
    padding: var(--space-lg) 0;
    background-color: var(--bg-secondary);
    font-family: var(--font-family-primary);

    // Responsive padding adjustments
    @media (max-width: 47.9375em) {
      // Below md breakpoint
      padding: var(--space-md) 0;
      margin-top: var(--space-2xl);
    }

    @media (max-width: 39.9375em) {
      // Below sm breakpoint
      padding: var(--space-sm) 0;
      margin-top: var(--space-xl);
    }

    // Container nesting
    &-container {
      margin: 0 auto;
      max-width: var(--container-xl);
      padding: 0 var(--space-md);

      // Responsive container padding
      @media (max-width: 47.9375em) {
        // Below md breakpoint
        padding: 0 var(--space-sm);
      }
    }

    // Main content layout - mobile first
    &-content {
      display: flex;
      flex-direction: column;
      gap: var(--space-md);
      align-items: center;

      // Responsive layout - side by side on larger screens
      @media (min-width: 48em) {
        // md breakpoint
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: var(--space-xl);
      }

      // Responsive gap adjustments
      @media (max-width: 39.9375em) {
        // Below sm breakpoint
        gap: var(--space-sm);
      }
    }

    // Left section - copyright and legal
    &-left {
      display: flex;
      flex-direction: column;
      gap: var(--space-sm);
      align-items: center;

      @media (min-width: 48em) {
        // md breakpoint
        align-items: flex-start;
      }

      // Responsive gap adjustments
      @media (max-width: 39.9375em) {
        // Below sm breakpoint
        gap: var(--space-xs);
      }
    }

    // Copyright text styles
    &-copyright {
      font-size: var(--text-sm);
      color: var(--text-tertiary);
      text-align: center;

      @media (min-width: 48em) {
        // md breakpoint
        text-align: left;
      }

      // Responsive font size
      @media (max-width: 39.9375em) {
        // Below sm breakpoint
        font-size: var(--text-xs);
      }
    }

    // Legal links
    &-legal {
      display: flex;
      gap: var(--space-md);
      flex-wrap: wrap;
      justify-content: center;

      @media (min-width: 48em) {
        // md breakpoint
        justify-content: flex-start;
      }

      // Responsive gap adjustments
      @media (max-width: 39.9375em) {
        // Below sm breakpoint
        gap: var(--space-sm);
      }
    }

    &-legal-link {
      color: var(--text-secondary);
      text-decoration: none;
      font-size: var(--text-sm);
      font-weight: var(--font-medium);
      padding: var(--space-xs) var(--space-sm);
      border-radius: var(--radius-sm);
      transition: color var(--animation-duration-fast);
      min-height: var(--min-touch-size);
      display: inline-flex;
      align-items: center;

      &:hover {
        color: var(--interactive-primary);
      }

      &:focus-visible {
        outline: var(--focus-outline);
        outline-offset: var(--focus-ring-offset);
        box-shadow: var(--focus-ring);
      }

      // Responsive font size
      @media (max-width: 39.9375em) {
        // Below sm breakpoint
        font-size: var(--text-xs);
        padding: var(--space-xs);
      }

      // High contrast mode support
      @media (prefers-contrast: high) {
        border: var(--border-width-thin) solid transparent;

        &:focus-visible {
          border-color: var(--border-focus);
        }
      }

      // Reduced motion support
      @media (prefers-reduced-motion: reduce) {
        transition-duration: var(--animation-duration-fast) !important;
      }
    }

    // Navigation - external links
    &-nav {
      display: flex;
      gap: var(--space-md);
      flex-wrap: wrap;
      justify-content: center;

      @media (min-width: 48em) {
        // md breakpoint
        justify-content: flex-end;
      }

      // Responsive gap adjustments
      @media (max-width: 39.9375em) {
        // Below sm breakpoint
        gap: var(--space-sm);
      }
    }

    // Footer link styles
    &-link {
      color: var(--text-secondary);
      text-decoration: none;
      font-size: var(--text-sm);
      font-weight: var(--font-medium);
      display: flex;
      align-items: center;
      gap: var(--space-xs);
      padding: var(--space-sm);
      border-radius: var(--radius-sm);
      min-height: var(--min-touch-size);
      transition:
        color var(--animation-duration-fast),
        background-color var(--animation-duration-fast);

      // Simple hover states
      &:hover {
        color: var(--interactive-primary);
        background-color: var(--bg-tertiary);
      }

      // Focus styles for keyboard navigation
      &:focus-visible {
        outline: var(--focus-outline);
        outline-offset: var(--focus-ring-offset);
        box-shadow: var(--focus-ring);
        background-color: var(--bg-tertiary);
      }

      // Responsive adjustments
      @media (max-width: 39.9375em) {
        // Below sm breakpoint
        font-size: var(--text-xs);
        padding: var(--space-xs);
        gap: var(--space-xs);
      }

      // Reduced motion support
      @media (prefers-reduced-motion: reduce) {
        transition-duration: var(--animation-duration-fast) !important;
      }

      // High contrast mode support
      @media (prefers-contrast: high) {
        border: var(--border-width-thin) solid transparent;

        &:focus-visible {
          border-color: var(--border-focus);
          background-color: var(--bg-primary);
        }
      }

      // Print styles
      @media print {
        color: var(--print-text) !important;
        background: transparent !important;
      }
    }

    // High contrast mode support for footer itself
    @media (prefers-contrast: high) {
      border-top-width: var(--border-width-thick);
    }

    // Forced colors mode support
    @media (forced-colors: active) {
      border-top-color: CanvasText;
      background-color: Canvas;
      color: CanvasText;
    }

    // Print styles for footer
    @media print {
      border-top: var(--border-width-thin) solid var(--print-border);
      color: var(--print-text);
      background: var(--print-bg);

      // Hide donation links in print
      .footer-nav {
        display: none;
      }
    }
  }

  // Screen reader only content
  .sr-only {
    position: absolute;
    width: var(--sr-only-width);
    height: var(--sr-only-height);
    padding: 0;
    margin: var(--sr-only-margin);
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

<script>
  /**
   * Footer Performance Optimization Script
   * Optimizes footer links for better performance and accessibility
   * Modern ES6+ implementation with arrow functions and const/let
   */
  document.addEventListener("DOMContentLoaded", () => {
    const footerLinks = document.querySelectorAll(".footer-link");

    // Use arrow function for forEach
    footerLinks.forEach((linkElement) => {
      const link = linkElement as HTMLElement;

      // Add passive touch event listeners for better scroll performance
      const addPassiveListener = (eventType: string) => {
        link.addEventListener(eventType, () => {}, { passive: true });
      };

      addPassiveListener("touchstart");
      addPassiveListener("touchend");

      // Dynamic will-change optimization with arrow functions
      const handleMouseEnter = () => {
        link.style.willChange = "transform, background-color";
      };

      const handleMouseLeave = () => {
        link.style.willChange = "auto";
      };

      link.addEventListener("mouseenter", handleMouseEnter);
      link.addEventListener("mouseleave", handleMouseLeave);
    });
  });
</script>
