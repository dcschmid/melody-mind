---
import { Icon } from "astro-icon/components";

/**
 * Deezer Embed Component
 *
 * Supports: tracks, playlists, albums, artists
 *
 * @example
 * <DeezerEmbed type="playlist" id="908622995" />
 * <DeezerEmbed type="track" id="3135556" />
 */

interface Props {
  /** Deezer content type */
  type: "track" | "playlist" | "album" | "artist";
  /** Deezer content ID */
  id: string;
  /** Embed width (default: 100%) */
  width?: string | number;
  /** Embed height (default: 92px for track, 350px for playlist/album) */
  height?: string | number;
  /** Load embed immediately or lazily */
  loading?: "eager" | "lazy";
  /** Dark theme (default: true) */
  theme?: "light" | "dark";
  /** Enable autoplay */
  autoplay?: boolean;
}

const {
  type,
  id,
  width = "100%",
  height,
  loading = "lazy",
  theme = "dark",
  autoplay = false,
} = Astro.props;

// Validate Deezer ID format (numeric)
const isValidDeezerId = (deezerId: string): boolean => {
  return /^\d+$/.test(deezerId);
};

const deezerId = id.trim();
if (!isValidDeezerId(deezerId)) {
  console.warn(`DeezerEmbed: Invalid Deezer ID "${deezerId}"`);
}

// Set default height based on content type
const defaultHeight = type === "track" ? 92 : 350;
const embedHeight = height || defaultHeight;

// Build embed URL
// Format: https://widget.deezer.com/widget/{theme}/{type}/{id}
const embedUrl = `https://widget.deezer.com/widget/${theme}/${type}/${deezerId}${
  autoplay ? "/autoplay" : ""
}`;

// Get title for accessibility
const contentTitle = `${type.charAt(0).toUpperCase() + type.slice(1)} on Deezer`;
---

<figure class="deezer-embed" data-testid="deezer-embed" aria-label={contentTitle}>
  <iframe
    src={embedUrl}
    width={typeof width === "number" ? `${width}px` : width}
    height={typeof embedHeight === "number" ? `${embedHeight}px` : embedHeight}
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading={loading}
    title={contentTitle}
    aria-label={`Deezer ${type} player`}
    referrerpolicy="no-referrer"
    data-deezer-embed></iframe>
  <figcaption class="deezer-embed__caption">
    <span class="deezer-embed__icon" aria-hidden="true">
      <Icon name="music" size="14" />
    </span>
    <span class="deezer-embed__text">Listen on Deezer</span>
  </figcaption>
</figure>

<style>
  .deezer-embed {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-block: 1.25rem;
  }

  .deezer-embed iframe {
    border: none;
    border-radius: 12px;
    display: block;
    background: transparent;
  }

  .deezer-embed__caption {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 1rem;
    color: var(--gn-ink-muted);
    line-height: 1.3;
  }

  .deezer-embed__icon {
    display: inline-flex;
    align-items: center;
    color: #00d1ff; /* Deezer blue */
  }

  .deezer-embed__text {
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .deezer-embed {
      margin-block: 1rem;
    }
  }
</style>
