---
import { Icon } from "astro-icon/components";

/**
 * Spotify Embed Component
 *
 * Supports: tracks, playlists, albums, artists, episodes, shows
 *
 * @example
 * <SpotifyEmbed type="playlist" id="37i9dQZF1DXcBWIGoYBM5M" />
 * <SpotifyEmbed type="track" id="3n3Ppam7vgaVa1iaRUc9Lp" />
 */

interface Props {
  /** Spotify content type */
  type: "track" | "playlist" | "album" | "artist" | "episode" | "show";
  /** Spotify content ID */
  id: string;
  /** Embed width (default: 100%) */
  width?: string | number;
  /** Embed height (default: 152px for track, 352px for playlist/album) */
  height?: string | number;
  /** Load embed immediately or lazily */
  loading?: "eager" | "lazy";
  /** Compact size (height 80px) */
  compact?: boolean;
}

const {
  type,
  id,
  width = "100%",
  height,
  loading = "lazy",
  compact = false,
} = Astro.props;

// Validate Spotify ID format
const isValidSpotifyId = (spotifyId: string): boolean => {
  return /^[a-zA-Z0-9]{22}$/.test(spotifyId);
};

const spotifyId = id.trim();
if (!isValidSpotifyId(spotifyId)) {
  console.warn(`SpotifyEmbed: Invalid Spotify ID "${spotifyId}"`);
}

// Set default height based on content type
const defaultHeight = compact ? 80 : type === "track" ? 152 : 352;
const embedHeight = height || defaultHeight;

// Build embed URL
const embedUrl = `https://open.spotify.com/embed/${type}/${spotifyId}`;

// Get title for accessibility
const contentTitle = `${type.charAt(0).toUpperCase() + type.slice(1)} on Spotify`;
---

<figure class="spotify-embed" data-testid="spotify-embed" aria-label={contentTitle}>
  <iframe
    src={embedUrl}
    width={typeof width === "number" ? `${width}px` : width}
    height={typeof embedHeight === "number" ? `${embedHeight}px` : embedHeight}
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading={loading}
    title={contentTitle}
    aria-label={`Spotify ${type} player`}
    referrerpolicy="no-referrer"
    data-spotify-embed></iframe>
  <figcaption class="spotify-embed__caption">
    <span class="spotify-embed__icon" aria-hidden="true">
      <Icon name="spotify" size="14" />
    </span>
    <span class="spotify-embed__text">Listen on Spotify</span>
  </figcaption>
</figure>

<style>
  .spotify-embed {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-block: 1.25rem;
  }

  .spotify-embed iframe {
    border: none;
    display: block;
    background: transparent;
    border-radius: 12px;
  }

  .spotify-embed__caption {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 1rem;
    color: var(--gn-ink-muted);
    line-height: 1.3;
  }

  .spotify-embed__icon {
    display: inline-flex;
    align-items: center;
    color: #1db954; /* Spotify green */
  }

  .spotify-embed__text {
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .spotify-embed {
      margin-block: 1rem;
    }
  }
</style>
