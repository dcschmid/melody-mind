---
import { Icon } from "astro-icon/components";

/**
 * Apple Music Embed Component
 *
 * Supports: albums, playlists, tracks
 *
 * @example
 * <AppleMusicEmbed type="album" country="us" id="123456" />
 * <AppleMusicEmbed type="playlist" country="de" id="pl.123456" />
 */

interface Props {
  /** Apple Music content type */
  type: "album" | "playlist" | "track";
  /** Apple Music content ID */
  id: string;
  /** Storefront country code (default: 'us') */
  country?: string;
  /** Embed width (default: 100%) */
  width?: string | number;
  /** Embed height (default: 470px) */
  height?: string | number;
  /** Load embed immediately or lazily */
  loading?: "eager" | "lazy";
  /** Light mode (default: dark) */
  light?: boolean;
}

const {
  type,
  id,
  country = "us",
  width = "100%",
  height,
  loading = "lazy",
  light = false,
} = Astro.props;

// Validate Apple Music ID format
const isValidAppleMusicId = (appleId: string): boolean => {
  // Apple IDs can be numeric or have prefixes like 'pl.' for playlists
  return /^(\d+|pl\.[a-zA-Z0-9]+)$/.test(appleId);
};

const appleId = id.trim();
if (!isValidAppleMusicId(appleId)) {
  console.warn(`AppleMusicEmbed: Invalid Apple Music ID "${appleId}"`);
}

// Validate country code (2-letter ISO code)
const isValidCountryCode = (code: string): boolean => {
  return /^[a-zA-Z]{2}$/.test(code);
};

const countryCode = isValidCountryCode(country) ? country.toLowerCase() : "us";

// Set default height
const defaultHeight = 470;
const embedHeight = height || defaultHeight;

// Build embed URL
// Format: https://embed.music.apple.com/{country}/{type}/{name}/{id}
// We use a simpler format that works with just type and id
const embedUrl = `https://embed.music.apple.com/${countryCode}/${type}/${appleId}${
  light ? "?itsct=music_box&amp;itscg=30200&amp;ls=1&amp;app=music" : ""
}`;

// Get title for accessibility
const contentTitle = `${type.charAt(0).toUpperCase() + type.slice(1)} on Apple Music`;
---

<figure
  class="apple-music-embed"
  data-testid="apple-music-embed"
  aria-label={contentTitle}
>
  <iframe
    src={embedUrl}
    width={typeof width === "number" ? `${width}px` : width}
    height={typeof embedHeight === "number" ? `${embedHeight}px` : embedHeight}
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading={loading}
    title={contentTitle}
    aria-label={`Apple Music ${type} player`}
    referrerpolicy="no-referrer"
    data-apple-music-embed></iframe>
  <figcaption class="apple-music-embed__caption">
    <span class="apple-music-embed__icon" aria-hidden="true">
      <Icon name="apple-music" size="14" />
    </span>
    <span class="apple-music-embed__text">Listen on Apple Music</span>
  </figcaption>
</figure>

<style>
  .apple-music-embed {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-block: 1.25rem;
  }

  .apple-music-embed iframe {
    border: none;
    border-radius: 12px;
    display: block;
    background: transparent;
  }

  .apple-music-embed__caption {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    color: var(--gn-ink-muted);
    line-height: 1.3;
  }

  .apple-music-embed__icon {
    display: inline-flex;
    align-items: center;
    color: var(--gn-ink-muted);
  }

  .apple-music-embed__text {
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .apple-music-embed {
      margin-block: 1rem;
    }
  }
</style>
