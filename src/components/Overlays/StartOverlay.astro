---
import Button from "../Shared/Button.astro";

const { headline, whiteText } = Astro.props;
---

<div id="startOverlay" class="startOverlay">
  <div class="startOverlay-content">
    <div class="headline">{headline}</div>
    <div class="text">
      Klicke auf das Albumcover und sortiere die Alben in die richtige
      Reihenfolge nach
      <span class="whiteText">{whiteText}</span>
    </div>
    <div class="text">
      Nutze den <span class="whiteText">Joker</span> um einen Hinweis zu erhalten.
    </div>
    <div class="centerButton">
      <Button id="gameButton" buttonText="spielen" url="#" />
    </div>
  </div>
</div>

<style lang="scss">
  .startOverlay {
    position: fixed;
    z-index: 1000;
    inset: 0;

    display: flex;
    align-items: center;
    justify-content: center;

    color: var(--text-color);

    visibility: hidden;
    background-color: rgb(0 0 0 / 90%);
  }

  .startOverlay-content {
    display: flex;
    flex-direction: column;
    align-items: center;

    width: 100%;
    max-width: 30rem;
    margin: var(--spacing-2);
  }

  .headline {
    font:
      900 3rem / 1.5 "Source Sans Pro",
      sans-serif;
    color: var(--text-color);
  }

  .text {
    margin-top: var(--spacing-3);
    font:
      400 1.5rem / 1.5 "Source Sans Pro",
      sans-serif;
    color: var(--colour-text-secondary);
    text-align: center;
  }

  .whiteText {
    color: var(--text-color);
  }

  .centerButton {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-xl);
  }
</style>
