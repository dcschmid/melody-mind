---
import Button from "../Shared/Button.astro";

const { headline, whiteText } = Astro.props;
---

<div id="startOverlay" class="startOverlay">
  <div class="startOverlay-content">
    <div class="headline">{headline}</div>
    <div class="text">
      Klicken Sie auf das Albumcover und sortieren Sie die Alben in die richtige Reihenfolge nach
      <span class="whiteText">{whiteText}</span>
    </div>
    <div class="text">
      Nutzen Sie die Möglichkeit einen <span class="whiteText">Joker</span> einzulösen, um einen Hinweis zu erhalten.
    </div>
    <div class="centerButton">
      <Button id="gameButton" buttonText="spielen" url="#" />
    </div>
  </div>
</div>

<style>
  .startOverlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    color: var(--colour-text-primary);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    visibility: hidden;
  }

  .startOverlay-content {
    display: flex;
    width: 366px;
    flex-direction: column;
    align-items: center;
  }

  .headline {
    color: var(--colour-text-primary);
    font-size: 48px;
    font-style: normal;
    font-weight: 900;
    line-height: 120%;
  }

  .text {
    color: var(--colour-text-secondary);
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: 130%;
    text-align: center;
    margin-top: var(--spacing-3);
  }

  .whiteText {
    color: var(--colour-text-primary);
  }

  .centerButton {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-spacing-xl);
  }
</style>
