---
import Button from "../Shared/Button.astro";

const { headline, whiteText } = Astro.props;
---

<div id="startOverlay" class="startOverlay">
  <div class="startOverlay-content">
    <div class="headline">{headline}</div>
    <div class="text">
      Klicken Sie auf das Albumcover und sortieren Sie die Alben in die richtige
      Reihenfolge nach
      <span class="whiteText">{whiteText}</span>
    </div>
    <div class="text">
      Nutzen Sie die Möglichkeit einen <span class="whiteText">Joker</span> einzulösen,
      um einen Hinweis zu erhalten.
    </div>
    <div class="centerButton">
      <Button id="gameButton" buttonText="spielen" url="#" />
    </div>
  </div>
</div>

<style>
  .startOverlay {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;

    display: flex;
    align-items: center;
    justify-content: center;

    width: 100%;
    height: 100%;

    color: var(--text-color);

    visibility: hidden;
    background-color: rgb(0 0 0 / 90%);
  }

  .startOverlay-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 366px;
  }

  .headline {
    font-size: 48px;
    font-weight: 900;
    font-style: normal;
    line-height: 120%;
    color: var(--text-color);
  }

  .text {
    margin-top: var(--spacing-3);

    font-size: 24px;
    font-weight: 400;
    font-style: normal;
    line-height: 130%;
    color: var(--colour-text-secondary);
    text-align: center;
  }

  .whiteText {
    color: var(--text-color);
  }

  .centerButton {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-xl);
  }
</style>
