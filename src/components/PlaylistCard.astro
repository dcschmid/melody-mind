      formats={["avif", "webp", "jpg"]}
      width={1280}
      height={720}
      priority={isPriority}
      fetchpriority={fetchPriority}
      itemprop="image"
      style="image-rendering: high-quality; color-rendering: optimizeQuality; transform: translateZ(0);"
      decoding="async"
      aria-describedby={`playlist-desc-${index}`}
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900/30 via-zinc-900/10 to-transparent"
      aria-hidden="true"
    >
    </div>
  </div>

  <div
    class="p-5 md:p-6 space-y-4 md:space-y-5 bg-gradient-to-b from-zinc-900 to-zinc-900/95"
  >
    <h2
      class="text-xl md:text-2xl lg:text-3xl font-bold text-white mb-2 md:mb-3 leading-tight"
      id={`playlist-title-${index}`}
      itemprop="name"
    >
      {headline}
    </h2>
    <div
      class="h-1 w-16 md:w-20 bg-gradient-to-r from-purple-400 to-indigo-400 rounded-full mb-3 md:mb-4"
      aria-hidden="true"
    >
    </div>
    <p
      class="text-white text-base md:text-lg lg:text-xl leading-relaxed md:leading-relaxed"
      id={`playlist-desc-${index}`}
      itemprop="description"
    >
      {introSubline}
    </p>

    <div
      class="flex flex-wrap gap-3 md:gap-4 mt-4 md:mt-5"
      role="group"
      aria-label={t("playlist.streaming.options")}
      itemprop="potentialAction"
      itemscope
      itemtype="https://schema.org/ListenAction"
    >
