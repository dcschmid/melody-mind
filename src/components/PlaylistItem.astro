---
interface Props {
  headline: string;
  image?: any;
  isDisabled?: boolean;
}

const { headline = "", image, isDisabled = false } = Astro.props;

import { When } from "@astropub/flow";
import { Picture } from "astro:assets";
---

<article class="playlistItem" aria-disabled={isDisabled} role="listitem">
  <When test={isDisabled}>
    <div
      class="disabled"
      aria-label="Dieser Inhalt ist noch nicht verf체gbar"
      role="status"
    >
      <span class="sr-only">Status:</span>
      Demn채chst verf체gbar
    </div>
  </When>
  <Picture
    class:list={["cover", { coverDisabled: isDisabled }]}
    src={image}
    width={130}
    height={130}
    formats={["avif", "webp"]}
    alt={`Cover-Bild f체r ${headline}`}
    loading="lazy"
  />
  <h2 class="headline">{headline}</h2>
</article>

<style lang="scss">
  .playlistItem {
    position: relative;
    width: var(--size-playlist-small);
    padding: var(--padding-small);
    background-color: var(--secondary-color);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    transition: transform var(--transition-speed) ease-in-out;
    min-height: var(--min-touch-target);

    &:hover:not([aria-disabled="true"]) {
      transform: translateY(-2px);
      box-shadow: 0 8px 15px rgb(0 0 0 / 25%);
    }

    &[aria-disabled="true"] {
      cursor: not-allowed;
    }

    @media screen and (min-width: 48em) {
      width: var(--size-playlist-large);
    }

    &:focus {
      outline: none;
    }

    @media (prefers-reduced-motion: reduce) {
      transition: none;
    }
  }

  .cover {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    transition: opacity var(--transition-speed) ease-in-out;

    &.coverDisabled {
      opacity: var(--opacity-disabled);
      filter: grayscale(50%);
    }
  }

  .disabled {
    position: absolute;
    z-index: var(--layer-above);
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    padding: var(--padding-small);
    font-family: var(--font-family);
    font-size: var(--body-font-size);
    line-height: var(--line-height-body);
    color: var(--secondary-color);
    text-align: center;
    background-color: var(--color-overlay);
    border-radius: var(--border-radius);
    letter-spacing: var(--spacing-text);
  }

  .headline {
    margin-top: var(--padding-small);
    font-family: var(--font-family);
    font-size: var(--body-font-size);
    font-weight: 600;
    line-height: var(--line-height-body);
    color: var(--text-color);
    overflow-wrap: break-word;
    max-width: var(--max-line-length);
  }
</style>
