---
interface Props {
  headline: string;
  image: string;
  isDisabled?: boolean;
  imageAlt: string;
}

const { headline = "", image, isDisabled = false, imageAlt = "" } = Astro.props;

import { When } from "@astropub/flow";
import { Picture } from "astro:assets";
---

<article class="playlistItem" role="listitem">
  <When test={isDisabled}>
    <div
      class="disabled"
      aria-label="Dieser Inhalt ist noch nicht verfügbar"
      role="status"
    >
      <span class="sr-only">Status:</span>
      Demnächst verfügbar
    </div>
  </When>
  <div class="imageWrapper">
    <Picture
      class:list={["cover", { coverDisabled: isDisabled }]}
      src={image}
      width={130}
      height={130}
      formats={["avif", "webp"]}
      alt={imageAlt}
      loading="lazy"
      decoding="async"
      fetchpriority={isDisabled ? "low" : "auto"}
      quality={80}
    />
  </div>
  <h2 class="headline">{headline}</h2>
</article>

<style lang="scss">
  .playlistItem {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: var(--secondary-color);
    border-radius: var(--border-radius);
    overflow: hidden;
    transition: opacity var(--transition-speed) ease-in-out;
    will-change: opacity;

    &[aria-disabled="true"] {
      opacity: var(--opacity-disabled);
      filter: grayscale(50%);
    }

    @media (hover: hover) {
      &:hover:not([aria-disabled="true"]) {
        transform: translateY(-2px);
        transition: transform 0.2s ease-in-out;
      }
    }
  }

  .imageWrapper {
    aspect-ratio: 1 / 1;
    padding-top: 0;
    width: 100%;
    padding-top: 100%;
    position: relative;
    overflow: hidden;

    @media (prefers-reduced-motion: reduce) {
      transition: none;
    }
  }

  @supports not (aspect-ratio: 1 / 1) {
    .imageWrapper {
      padding-top: 100%;
    }
  }

  .cover {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .disabled {
    position: absolute;
    z-index: var(--layer-above);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--padding-small);
    font-family: var(--font-family);
    font-size: var(--body-font-size);
    line-height: var(--line-height-body);
    color: var(--button-text-color);
    text-align: center;
    background-color: var(--color-overlay);
    letter-spacing: var(--spacing-text);
  }

  .headline {
    padding: var(--padding-small);
    margin: 0;
    font-family: var(--font-family);
    font-size: var(--body-font-size);
    font-weight: 600;
    line-height: var(--line-height-body);
    color: var(--text-color);
    overflow-wrap: break-word;
    text-align: center;
    hyphens: auto;
  }
</style>
