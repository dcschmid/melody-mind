---
/**
 * Timeline Component - Enhanced Vertical Timeline
 *
 * @component
 */
import TimelineEvent from "./TimelineEvent.astro";
import timelineDataRaw from "../../data/timeline.json";

interface EventType {
  year: number;
  type?: string;
  title?: string;
  description: string;
  genre?: string;
  link?: string;
}

interface DecadeType {
  slug: string;
  decade: string;
  title: string;
  articleSlug?: string;
  color: string;
  items: EventType[];
}

interface TimelineData {
  decades: DecadeType[];
}

const timelineData = timelineDataRaw as TimelineData;
const { decades } = timelineData;
---

<section class="timeline" aria-labelledby="timeline-title">
  <header class="timeline__header">
    <h2 id="timeline-title" class="timeline__title">The Music Timeline</h2>
    <p class="timeline__subtitle">
      From rock & roll to streaming â€“ explore the evolution
    </p>
  </header>

  <div class="timeline__wrapper">
    {
      decades.map((decade) => (
        <div class="timeline__section">
          <div class="timeline__line-column">
            <div
              class="timeline__dot timeline__dot--decade"
              style={`background: ${decade.color}; box-shadow: 0 0 0 3px color-mix(in srgb, ${decade.color} 20%, transparent)`}
            />
            <div class="timeline__line" />
          </div>

          <div class="timeline__content">
            <TimelineEvent
              event={{
                year: parseInt(decade.decade),
                title: decade.title,
                description: decade.title,
              }}
              isDecade={true}
              decadeSlug={decade.articleSlug}
              decadeColor={decade.color}
            />

            <div class="timeline__events">
              {decade.items.map((item, idx) => (
                <TimelineEvent event={item} />
              ))}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .timeline {
    width: 100%;
    max-width: 720px;
    margin: 0 auto;
    padding: 1.5rem 0.75rem;
    overflow-x: hidden;
  }

  .timeline__header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .timeline__title {
    margin: 0 0 0.35rem;
    font-size: clamp(1.4rem, 5vw, 1.8rem);
    font-weight: 700;
    color: var(--gn-ink);
    letter-spacing: -0.02em;
  }

  .timeline__subtitle {
    margin: 0;
    font-size: 1rem;
    color: var(--gn-ink-muted);
  }

  .timeline__wrapper {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .timeline__section {
    display: flex;
    gap: 0.5rem;
    min-width: 0;
  }

  .timeline__line-column {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 22px;
    flex-shrink: 0;
    padding-top: 0.5rem;
  }

  .timeline__dot {
    border-radius: 50%;
    border: 2px solid var(--gn-bg);
    flex-shrink: 0;
  }

  .timeline__dot--decade {
    width: 14px;
    height: 14px;
  }

  .timeline__line {
    width: 2px;
    flex-grow: 1;
    background: linear-gradient(
      to bottom,
      var(--gn-panel-border) 0%,
      color-mix(in srgb, var(--gn-panel-border) 50%, transparent) 100%
    );
    margin-top: 3px;
    min-height: 40px;
  }

  .timeline__content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    padding-bottom: 0.75rem;
  }

  .timeline__events {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    margin-top: 0.15rem;
    padding-left: 0.75rem;
    border-left: 2px solid color-mix(in srgb, var(--gn-panel-border) 35%, transparent);
  }

  @media (max-width: 639px) {
    .timeline {
      padding: 1.25rem 0.5rem;
      overflow-x: hidden;
      max-width: 100%;
    }

    .timeline__header {
      margin-bottom: 1.25rem;
    }

    .timeline__title {
      font-size: 1.4rem;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .timeline__subtitle {
      font-size: 0.95rem;
    }

    .timeline__line-column {
      width: 20px;
    }

    .timeline__dot--decade {
      width: 12px;
      height: 12px;
    }

    .timeline__events {
      padding-left: 0.65rem;
    }
  }
</style>
