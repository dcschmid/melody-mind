---
interface Props {
  href?: string;
  type?: "button" | "submit" | "reset";
  disabled?: boolean;
  ariaLabel?: string;
  class?: string;
}

const {
  href,
  type = "button",
  disabled = false,
  ariaLabel,
  class: extraClasses = "",
} = Astro.props;

const baseClasses =
  "inline-flex h-12 w-auto items-center justify-center rounded-lg px-6 py-3 font-bold text-zinc-900 bg-sky-400 transition-all duration-300 hover:bg-sky-300 hover:shadow-lg hover:shadow-sky-500/20 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-zinc-900 active:scale-95 disabled:pointer-events-none disabled:opacity-50";

const finalClasses = `${baseClasses} ${extraClasses}`.trim();
---

{
  href ? (
    <a href={href} class={finalClasses} aria-label={ariaLabel}>
      <slot />
    </a>
  ) : (
    <button
      type={type}
      disabled={disabled}
      class={finalClasses}
      aria-label={ariaLabel}
    >
      <slot />
    </button>
  )
}
