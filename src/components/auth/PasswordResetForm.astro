        background-color: var(--bg-active);
        color: var(--text-primary);
      }
    }

    &__requirements-icon {
      width: clamp(var(--space-md), 3vw, var(--space-lg));
      height: clamp(var(--space-md), 3vw, var(--space-lg));
      
      flex-shrink: 0;
      
      // Performance optimizations
      contain: layout style;
      transform: translateZ(0);
    }

    &__requirements {
      background-color: var(--bg-tertiary);
      border: var(--border-width-thin) solid var(--border-secondary);
      border-radius: var(--radius-md);
      
      padding: clamp(var(--space-lg), 4vw, var(--space-xl));
      margin-top: clamp(var(--space-sm), 2vw, var(--space-md));
      
      // Performance optimizations
      contain: layout style;
      transform: translateZ(0);
      will-change: opacity, transform;
      
      transition:
        opacity var(--transition-normal),
        transform var(--transition-normal);

      &--hidden {
        display: none;
      }

      &-title {
        font-size: clamp(var(--text-base), 3vw, var(--text-lg));
        font-weight: var(--font-medium);
        color: var(--text-primary);
        
        margin-bottom: clamp(var(--space-md), 3vw, var(--space-lg));
        
        text-wrap: balance;
        
        // Performance optimizations
        contain: layout style;
      }

      &-list {
        list-style: none;
        padding: var(--space-none);
        margin: var(--space-none);
        
        display: flex;
        flex-direction: column;
        gap: clamp(var(--space-sm), 2vw, var(--space-md));
        
        // Performance optimizations
        contain: layout style;
      }
