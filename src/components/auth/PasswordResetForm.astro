      background: var(--bg-tertiary);
      border: var(--border-width-thin) solid var(--border-secondary);
      border-radius: var(--radius-md);
      color: var(--text-secondary);
      cursor: pointer;
      
      width: var(--width-full);
      min-height: var(--touch-target-enhanced);
      
