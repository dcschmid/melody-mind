    // Password toggle
    &__toggle {
      position: absolute;
      right: clamp(var(--space-sm), 2vw, var(--space-md));
      top: 50%;
      transform: translateY(-50%) translateZ(0);
      
      background: transparent;
      border: none;
      border-radius: var(--radius-sm);
      color: var(--text-secondary);
      cursor: pointer;
      
