    &__help-content {
      color: var(--text-primary);
      
      // Performance optimizations
      contain: layout style;
    }

    &__help-title {
      font-size: clamp(var(--text-base), 3vw, var(--text-lg));
      font-weight: var(--font-semibold);
      color: var(--text-primary);
      
      margin-bottom: clamp(var(--space-sm), 2vw, var(--space-md));
      
      text-wrap: balance;
      
