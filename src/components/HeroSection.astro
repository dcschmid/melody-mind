---
import Headline from "@components/Headline.astro";
import Paragraph from "@components/Paragraph.astro";

interface Props {
  title: string;
  subtitle?: string;
  headingLevel?: "h1" | "h2" | "h3";
  id?: string;
  icon?: string;
}

const {
  title,
  subtitle,
  headingLevel = "h1",
  id = "hero-heading",
  icon,
} = Astro.props as Props;
const headlineLevel = headingLevel;
const sectionClasses =
  "relative mb-16 overflow-hidden rounded-3xl gn-panel bg-gn-soot-800/90 p-8 sm:p-12 lg:p-16 text-gn-parchment-50";
---

<section class={sectionClasses} aria-labelledby={id}>
  <div
    class="pointer-events-none absolute inset-0 opacity-30 mix-blend-screen"
    aria-hidden="true"
    style="background-image: var(--gn-halftone);"
  >
  </div>
  <div
    class="via-gn-soot-800/50 to-gn-soot-900/90 pointer-events-none absolute inset-0 bg-linear-to-b from-transparent"
    aria-hidden="true"
  >
  </div>
  <div
    class="relative z-10 mx-auto flex w-full max-w-full flex-col items-stretch text-center"
  >
    <div class="flex flex-col items-stretch">
      <Headline
        level={headlineLevel}
        className="text-gn-parchment-50 mx-auto w-full text-center font-bold tracking-tight text-balance"
      >
        {
          icon && (
            <span class="mr-3 align-middle text-3xl leading-none" aria-hidden="true">
              {icon}
            </span>
          )
        }
        <span class="align-middle">{title}</span>
      </Headline>
      <div
        class="bg-gn-amber-400 mx-auto mt-4 h-1 w-12 rounded-full shadow-[3px_3px_0_rgba(0,0,0,0.6)]"
      >
      </div>
      {
        subtitle && (
          <Paragraph
            textSize="lg"
            textAlign="center"
            className="mt-6 w-full max-w-full mx-auto leading-relaxed text-balance text-gn-parchment-200"
          >
            {subtitle}
          </Paragraph>
        )
      }
    </div>
    <div class="mt-10 flex w-full flex-wrap justify-center gap-4">
      <slot name="primary" />
    </div>
    <div class="mt-8 flex w-full flex-wrap justify-center gap-4">
      <slot name="secondary" />
    </div>
    <slot />
  </div>
</section>
