---
import { Icon } from "astro-icon/components";

interface Crumb {
  name: string;
  url?: string;
}

interface Props {
  items: Crumb[];
  ariaLabel?: string;
}

const { items = [], ariaLabel = "Breadcrumb" } = Astro.props;
const normalized = Array.isArray(items) ? items.filter(Boolean) : [];
---

{
  normalized.length > 0 && (
    <nav aria-label={ariaLabel} class="breadcrumbs">
      <ol class="breadcrumbs__list">
        {normalized.map((crumb, index) => {
          const isLast = index === normalized.length - 1;
          return (
            <li class="breadcrumbs__item">
              {index > 0 && (
                <span class="breadcrumbs__divider" aria-hidden="true">
                  /
                </span>
              )}
              {isLast || !crumb.url ? (
                <span
                  class="breadcrumbs__current"
                  aria-current={isLast ? "page" : undefined}
                >
                  {crumb.name}
                </span>
              ) : (
                <a href={crumb.url} class="breadcrumbs__link">
                  {index === 0 && (
                    <Icon name="home" class="breadcrumbs__link-icon" aria-hidden="true" />
                  )}
                  <span class="breadcrumbs__link-text">{crumb.name}</span>
                </a>
              )}
            </li>
          );
        })}
      </ol>
    </nav>
  )
}
<style>
  .breadcrumbs {
    inline-size: 100%;
    overflow-inline: auto;
  }

  .breadcrumbs__list {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    max-inline-size: 72rem;
    padding: 0.75rem 1rem;
    margin: 0 auto;
    font-size: 1.125rem;
    color: var(--gn-ink);
    list-style: none;
  }

  @media (width <= 639px) {
    .breadcrumbs {
      overflow-inline: visible;
    }

    .breadcrumbs__list {
      flex-wrap: wrap;
      gap: 0.35rem;
      padding: 0.5rem 1rem 0.75rem;
    }

    .breadcrumbs__item {
      gap: 0.35rem;
    }

    .breadcrumbs__link {
      padding: 0.2rem 0.6rem;
      border-width: 1px;
    }

    .breadcrumbs__link-text {
      font-size: 1.125rem;
    }

    .breadcrumbs__current {
      font-size: 1.125rem;
    }
  }

  @media (width >= 640px) {
    .breadcrumbs__list {
      gap: 0.75rem;
      padding: 1rem 1.5rem;
    }
  }

  .breadcrumbs__item {
    display: inline-flex;
    gap: 0.5rem;
    align-items: center;
  }

  .breadcrumbs__divider {
    color: var(--color-gn-amber-400);
  }

  .breadcrumbs__current {
    max-inline-size: 45ch;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--gn-ink);
    white-space: nowrap;
  }

  @media (width >= 640px) {
    .breadcrumbs__current {
      max-inline-size: none;
    }
  }

  @media screen and (prefers-reduced-motion: reduce) {
    .breadcrumbs__link {
      display: inline-flex;
      gap: 0.35rem;
      align-items: center;
      padding: 0.35rem 0.75rem;
      color: var(--gn-ink);
      text-decoration: none;
      background: var(--gn-bg-muted);
      border: 2px solid var(--gn-panel-border);
      border-radius: 999px;
      transition: none;
    }
  }

  .breadcrumbs__link {
    display: inline-flex;
    gap: 0.35rem;
    align-items: center;
    padding: 0.35rem 0.75rem;
    color: var(--gn-ink);
    text-decoration: none;
    background: var(--gn-bg-muted);
    border: 2px solid var(--gn-panel-border);
    border-radius: 999px;
    transition:
      background-color var(--transition-fast),
      border-color var(--transition-fast),
      transform var(--transition-fast);
  }

  .breadcrumbs__link:hover,
  .breadcrumbs__link:focus {
    background: color-mix(in srgb, var(--gn-bg-muted) 85%, transparent);
    border-color: color-mix(in srgb, var(--color-gn-amber-300) 70%, transparent);
  }

  .breadcrumbs__link:focus-visible {
    outline: 3px solid var(--color-gn-amber-300);
    outline-offset: 2px;
  }

  .breadcrumbs__link-icon {
    display: block;
    inline-size: 1rem;
    block-size: 1rem;
    color: var(--color-gn-amber-300);
  }

  .breadcrumbs__link-text {
    max-inline-size: 45ch;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 1.125rem;
    font-weight: 600;
    white-space: nowrap;
  }

  @media (width >= 640px) {
    .breadcrumbs__link-text {
      max-inline-size: none;
      font-size: 1.125rem;
    }
  }
</style>
