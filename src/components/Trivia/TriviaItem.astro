---
interface Props {
  band?: string;
  album?: string;
  image?: any;
}

const { band = "", album = "", image } = Astro.props;

import { Picture } from "astro:assets";
---

<div class="triviaItem">
  <Picture
    class="cover"
    src={image}
    width={126}
    height={126}
    formats={["avif", "webp"]}
    alt=""
  />
  <div class="band">{band}</div>
  <div class="album">{album}</div>
</div>

<style>
  .triviaItem {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 130px;
    color: var(--text-color);

    @media screen and (width >= 25.625rem) {
      width: 160px;
    }

    &:hover,
    &:focus-visible {
      cursor: pointer;
      color: var(--primary-color);

      .cover {
        outline: 2px solid var(--primary-color);
      }

      .band,
      .album {
        color: inherit;
      }
    }
  }

  .cover {
    width: 100%; /* Use 100% instead of repeating the width value */
    height: auto;
  }

  .band {
    font-size: 0.875rem;
    font-weight: 700;
    line-height: 1.5;
  }

  .album {
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.5;
  }
</style>
