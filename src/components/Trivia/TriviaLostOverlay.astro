---
import { Icon } from "astro-icon/components";
import Button from "../Shared/Button.astro";

const { url } = Astro.props;
---

<div id="overlayLost" class="overlay">
  <div class="overlayLost-content">
    <Icon name="lost" width={80} height={80} />
    <div class="headline">Leider falsch</div>
    <div class="subline">Punktestand bleibt</div>
    <div class="point"></div>
    <div class="centerButton">
      <Button buttonText="AuflÃ¶sung" url={url} />
    </div>
  </div>
</div>

<style lang="scss">
  .overlay {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-color);
    visibility: hidden;
    background-color: rgba(0, 0, 0, 0.9);
  }

  .overlayLost-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 366px;
    margin: var(--spacing-2);
  }

  .headline {
    margin-top: var(--spacing-3);
    font-size: 3rem;
    font-weight: 900;
    line-height: 1.5;
    color: var(--text-color);
  }

  .subline {
    margin-top: var(--spacing-3);
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: var(--colour-text-secondary);
    text-align: center;
  }

  .point {
    font-size: 2.5rem;
    font-weight: 900;
    line-height: normal;
    color: var(--text-color);
  }

  .centerButton {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-xl);
  }
</style>
