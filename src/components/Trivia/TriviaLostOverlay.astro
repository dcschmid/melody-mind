---
import { Icon } from "astro-icon/components";
import Button from "../Shared/Button.astro";

const { url } = Astro.props;
---

<div id="overlayLost" class="overlay">
  <div class="overlayLost-content">
    <Icon name="lost" width={80} height={80} />
    <div class="headline">Leider falsch</div>
    <div class="subline">Punktestand bleibt</div>
    <div class="point"></div>
    <div class="centerButton">
      <Button buttonText="AuflÃ¶sung" url={url} />
    </div>
  </div>
</div>

<style>
  .overlay {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;

    display: flex;
    align-items: center;
    justify-content: center;

    width: 100%;
    height: 100%;

    color: var(--text-color);

    visibility: hidden;
    background-color: rgb(0 0 0 / 90%);
  }

  .overlayLost-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    width: 366px;
  }

  .headline {
    margin-top: var(--spacing-3);

    font-size: 48px;
    font-weight: 900;
    font-style: normal;
    line-height: 120%;
    color: var(--text-color);
  }

  .subline {
    margin-top: var(--spacing-3);

    font-size: 14px;
    font-weight: 400;
    font-style: normal;
    line-height: 150%;
    color: var(--colour-text-secondary);
    text-align: center;
  }

  .point {
    font-size: 40px;
    font-weight: 900;
    font-style: normal;
    line-height: normal;
    color: var(--text-color);
    letter-spacing: 2px;
  }

  .centerButton {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-xl);
  }
</style>
