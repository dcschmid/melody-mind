---
import { Icon } from "astro-icon/components";
import Button from "../Shared/Button.astro";

const { question } = Astro.props;
---

<div id="overlayStart" class="overlay">
  <div class="overlayStart-content">
    <Icon name="star-golden" width={80} height={80} />
    <div class="headline">Trivia Frage</div>
    <div class="question">{question}</div>
    <div class="centerButton">
      <Button id="gameButton" buttonText="weiter" url="#" />
    </div>
  </div>
</div>

<style>
  .overlay {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;

    display: flex;
    align-items: center;
    justify-content: center;

    width: 100%;
    height: 100%;

    color: var(--text-color);

    visibility: hidden;
    background-color: rgb(0 0 0 / 90%);
  }

  .overlayStart-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    width: 366px;
  }

  .headline {
    margin-top: var(--spacing-3);

    font-size: 48px;
    font-weight: 900;
    font-style: normal;
    line-height: 120%;
    color: var(--text-color);
  }

  .question {
    margin-top: var(--spacing-3);

    font-size: 24px;
    font-weight: 400;
    line-height: 130%;
    color: var(--text-color);
    text-align: center;
  }

  .centerButton {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-xl);
  }
</style>
