---
import { Icon } from "astro-icon/components";
import Button from "../Shared/Button.astro";

const { url } = Astro.props;
---

<div id="overlayWonLP" class="overlay">
  <div class="content">
    <div class="goldenLPRoot">
      <Icon name="golden-lp" width={200} height={200} />
    </div>
    <div class="headline">Glückwunsch!</div>
    <div class="centerText">
      Alles richtig! Du hast eine goldene Schallplatte erspielt!
    </div>
    <div class="point"></div>
    <div class="centerButton">
      <Button buttonText="Auflösung" url={url} />
    </div>
  </div>
</div>

<style>
  .overlay {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-color);
    visibility: hidden;
    background-color: rgba(0, 0, 0, 0.9);
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    align-items: center;
    justify-content: center;
    max-width: 366px;
    margin: var(--spacing-2);
  }

  .headline,
  .point {
    font-weight: 900;
    color: var(--text-color);
  }

  .headline {
    font-size: 3rem;
    line-height: 1.5;
  }

  .point {
    font-size: 2.5rem;
    line-height: normal;
  }

  .centerButton {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-md);
  }

  .centerText {
    font-size: 1.5rem;
    font-weight: 400;
    line-height: 1.5;
    color: var(--colour-text-secondary);
    text-align: center;
  }

  .goldenLPRoot {
    position: relative;
  }

  .icon {
    position: absolute;
    right: 0;
    bottom: 0;
  }
</style>
