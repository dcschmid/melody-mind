---
/**
 * Headline Usage Examples
 * 
 * Demonstrates the updated Headline component with the new size and variant props,
 * similar to the Paragraph component's API design.
 */
import Headline from "../Headline.astro";
---

<!-- Example section showing the new API -->
<section class="headline-examples">
  <div class="example-group">
    <h2>Text Size Examples (similar to Paragraph component)</h2>
    
    <!-- Extra small headline -->
    <Headline 
      level="h6" 
      size="xs" 
      variant="default" 
      title="Extra Small Headline (xs)" 
    />
    
    <!-- Small headline -->
    <Headline 
      level="h5" 
      size="sm" 
      variant="default" 
      title="Small Headline (sm)" 
    />
    
    <!-- Base size headline -->
    <Headline 
      level="h4" 
      size="base" 
      variant="default" 
      title="Base Size Headline (base)" 
    />
    
    <!-- Large headline -->
    <Headline 
      level="h3" 
      size="lg" 
      variant="default" 
      title="Large Headline (lg)" 
    />
    
    <!-- Extra large headline (default) -->
    <Headline 
      level="h2" 
      size="xl" 
      variant="default" 
      title="Extra Large Headline (xl) - Default Size" 
    />
    
    <!-- 2x large headline -->
    <Headline 
      level="h2" 
      size="2xl" 
      variant="default" 
      title="2X Large Headline (2xl)" 
    />
    
    <!-- 3x large headline -->
    <Headline 
      level="h1" 
      size="3xl" 
      variant="default" 
      title="3X Large Headline (3xl)" 
    />
    
    <!-- 4x large headline -->
    <Headline 
      level="h1" 
      size="4xl" 
      variant="default" 
      title="4X Large Headline (4xl)" 
    />
  </div>

  <div class="example-group">
    <h2>Variant Examples</h2>
    
    <!-- Default variant with different sizes -->
    <Headline 
      level="h1" 
      size="3xl" 
      variant="default" 
      title="Default Variant - Standard Colors" 
    />
    
    <!-- Primary variant with gradient -->
    <Headline 
      level="h1" 
      size="3xl" 
      variant="primary" 
      title="Primary Variant - Gradient Effect" 
    />
  </div>

  <div class="example-group">
    <h2>Flexible Combinations</h2>
    
    <!-- Small size with primary variant -->
    <Headline 
      level="h3" 
      size="sm" 
      variant="primary" 
      title="Small Primary Headline" 
    />
    
    <!-- Large size with center alignment -->
    <Headline 
      level="h2" 
      size="2xl" 
      variant="default" 
      textAlign="center" 
      title="Centered Large Headline" 
    />
    
    <!-- Interactive headline -->
    <Headline 
      level="h2" 
      size="xl" 
      variant="primary" 
      interactive={true}
      focusable={true}
      textAlign="center" 
      title="Interactive Primary Headline" 
    />
  </div>

  <div class="example-group">
    <h2>Accessibility Features</h2>
    
    <!-- Skip navigation target -->
    <Headline 
      level="h2" 
      size="xl" 
      variant="default" 
      id="main-content"
      skipTarget={true}
      title="Skip Navigation Target" 
    />
    
    <!-- With ARIA enhancements -->
    <Headline 
      level="h3" 
      size="lg" 
      variant="default" 
      ariaLabel="Game statistics section"
      ariaDescribedBy="stats-description"
      title="Game Statistics" 
    />
  </div>
</section>

<style>
  .headline-examples {
    padding: var(--space-xl);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  .example-group {
    margin-bottom: var(--space-2xl);
    padding: var(--space-lg);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
  }

  .example-group h2 {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-lg);
    border-bottom: 2px solid var(--border-primary);
    padding-bottom: var(--space-sm);
  }

  .example-group > :global(.headline) {
    margin-bottom: var(--space-md);
    padding: var(--space-sm);
    background-color: var(--bg-primary);
    border-radius: var(--radius-sm);
    border: 1px solid var(--border-secondary);
  }

  .example-group > :global(.headline:last-child) {
    margin-bottom: 0;
  }

  /* Responsive adjustments */
  @media (min-width: var(--breakpoint-md)) {
    .headline-examples {
      padding: var(--space-2xl);
    }
  }
</style>
