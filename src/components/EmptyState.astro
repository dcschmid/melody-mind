---
/**
 * EmptyState Component - Responsive & Accessible
 *
 * A comprehensive empty state component for displaying when there's no content
 * to show. Fully responsive with WCAG AAA compliance and optimized for all screen sizes.
 *
 * @component
 * @example
 * ```astro
 * <EmptyState
 *   icon="music"
 *   title="No playlists found"
 *   description="Create your first playlist to get started"
 *   action={<Button>Create Playlist</Button>}
 * />
 * ```
 */
import { Icon } from "astro-icon/components";
import Headline from "./Headline.astro";
import Paragraph from "./Paragraph.astro";

export interface EmptyStateProps {
  /** The icon name to display (from astro-icon) */
  icon: string;
  /** The main title text */
  title: string;
  /** The description text below the title */
  description: string;
  /** Optional action button or content (slotted) */
  action?: any;
  /** Optional custom CSS classes */
  className?: string;
}

const { icon, title, description, className = "" } = Astro.props;
---

<div
  class={`flex justify-center items-center min-h-96 sm:min-h-80 md:min-h-64 p-8 sm:p-6 md:p-4 grid-col-span-full font-sans ${className}`}
>
  <div class="text-center max-w-2xl sm:max-w-full sm:px-4 w-full">
    <Icon
      name={icon}
      class="w-16 h-16 sm:w-12 sm:h-12 md:w-10 md:h-10 text-slate-400 mb-6 sm:mb-4 md:mb-3 mx-auto"
      aria-hidden="true"
    />
    <Headline
      level="h2"
      {title}
      className="mb-4 sm:mb-3 md:mb-2 text-slate-600 dark:text-slate-300"
    />
    <Paragraph className="mb-6 sm:mb-4 md:mb-3 text-slate-500 dark:text-slate-400">
      {description}
    </Paragraph>
    <slot name="action" />
  </div>
</div>
