    margin: var(--space-none) auto;
    width: var(--width-full);
    max-width: var(--container-2xl);
    padding: var(--space-lg);
    min-height: 100vh;
    background: var(--bg-primary);
    color: var(--text-primary);
    
    // Modern CSS containment for better performance
    contain: layout style;

    // Responsive padding with fluid scaling
    @media (min-width: 30em) {
      padding: clamp(var(--space-lg), 4vw, var(--space-xl));
    }
    
    @media (min-width: 48em) {
      padding: clamp(var(--space-xl), 5vw, var(--space-2xl));
    }
    
    @media (min-width: 64em) {
      padding: var(--space-2xl);
    }
  }

  /* ==============================================
   * HEADER & LAYOUT SECTIONS - MODERN RESPONSIVE
   * ============================================== */

  // Header Section with improved performance
  .section-header {
    text-align: center;
    margin-bottom: clamp(var(--space-2xl), 6vw, var(--space-3xl));
    padding: clamp(var(--space-lg), 4vw, var(--space-xl));
    contain: layout style;
  }

  // Modern Header with integrated image and fluid design
  .header-with-image {
    margin: var(--space-none) auto var(--space-3xl) auto;
    padding: clamp(var(--space-lg), 4vw, var(--space-2xl));
    text-align: center;
    width: var(--width-full);
    max-width: var(--container-xl);
    contain: layout style;

    @media (min-width: 48em) {
      text-align: left;
    }
  }

  .header-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: clamp(var(--space-2xl), 5vw, var(--space-3xl));
    width: var(--width-full);
    
    // Modern CSS Grid for better control on larger screens
    @media (min-width: 48em) {
      display: grid;
      grid-template-columns: 1fr 0.8fr;
      gap: clamp(var(--space-2xl), 4vw, var(--space-3xl));
      align-items: center;
    }
    
    @media (min-width: 64em) {
      grid-template-columns: 1.2fr 1fr;
      gap: var(--space-3xl);
    }
  }

  .header-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: clamp(var(--space-sm), 3vw, var(--space-lg));
    flex: 1;
    min-width: 0;
    
    @media (min-width: 48em) {
      align-items: flex-start;
      text-align: left;
    }
  }

  .header-image {
    width: var(--width-full);
    max-width: min(var(--container-xs), 90vw);
    flex-shrink: 0;
    
    @media (min-width: 48em) {
      max-width: var(--container-sm);
    }
  }

  // Header Image Styling with modern approach
  .header-image-container {
    position: relative;
    width: var(--width-full);
    aspect-ratio: 5 / 3;
    overflow: hidden;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
    border: var(--border-width-thin) solid var(--border-primary);
    
    // Modern CSS transforms for better performance
    transform: translateZ(0);
    will-change: transform;
    
    // Responsive aspect ratio
    @media (max-width: 30em) {
      aspect-ratio: 4 / 3;
    }
  }

  .header-responsive-image {
    height: var(--width-full);
    width: var(--width-full);
    object-fit: cover;
    transition: transform var(--transition-normal);
    
    // Performance optimization
    transform: translateZ(0);
    will-change: transform;
  }

  .header-with-image:hover {
    .header-responsive-image {
      transform: scale(var(--animation-scale-hover-subtle)) translateZ(0);
    }
  }

  .header-no-image-container {
    display: flex;
    aspect-ratio: 5 / 3;
    width: var(--width-full);
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-xl);
    background: var(--bg-secondary);
    padding: var(--space-lg);
    text-align: center;
    color: var(--text-secondary);
    border: var(--border-width-thin) dashed var(--border-secondary);
  }

  .header-no-image-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
  }

  .divider {
    margin: var(--space-lg) auto;
    height: var(--border-width-thick);
    width: var(--space-3xl);
    border-radius: var(--radius-full);
    background: var(--interactive-primary);
  }

  /* Article Container */
  .article-container {
    margin: var(--space-none) auto;
    width: var(--width-full);
    max-width: var(--container-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  /* ==============================================
   * CONTENT SECTIONS
   * ============================================== */

  /* Description Section - Modern styling matching game sections */
  .description-container {
    /* Remove old styles - now uses section-container base styles */
  }

  .description-badge {
    background: linear-gradient(135deg, var(--color-primary-500) 0%, var(--color-primary-600) 100%);

    &::before {
      background: linear-gradient(135deg, var(--color-primary-400), var(--color-primary-600));
    }
  }

  /* Header Badge - Modern styling with secondary color gradient */
  .header-badge {
    background: linear-gradient(
      135deg,
      var(--color-secondary-500) 0%,
      var(--color-secondary-600) 100%
    );

    &::before {
      background: linear-gradient(135deg, var(--color-secondary-400), var(--color-secondary-600));
    }
  }

  /* ==============================================
   * INTERACTIVE SECTIONS & COMPONENTS
   * ============================================== */

  /* Section Containers - Modern styling for game sections */
  .section-container {
    position: relative;
    display: flex;
    width: var(--width-full);
    flex-direction: column;
    align-items: center;
    gap: var(--space-2xl);
    margin-top: var(--space-2xl);
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
    border: var(--border-width-thin) solid var(--border-primary);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-normal);
    overflow: hidden;

    &::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: var(--border-width-thick);
      background: linear-gradient(90deg, var(--interactive-primary), var(--color-secondary-500));
      opacity: var(--opacity-high);
    }

    &:hover {
      transform: translateY(var(--animation-x-offset-small));
      box-shadow: var(--shadow-xl);
      border-color: var(--interactive-primary);
    }

    &:focus-within {
      box-shadow: var(--focus-ring), var(--shadow-xl);
      border-color: var(--border-focus);
      transform: translateY(var(--animation-x-offset-small));
    }

    /* Tablet and above: --breakpoint-md (768px) */
    @media (min-width: 48em) {
      padding: var(--space-3xl);
      margin-left: auto;
      margin-right: auto;
      border-radius: var(--radius-2xl);
    }
  }

  .chronology-section {
    margin-top: var(--space-3xl);
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);

    &::before {
      background: linear-gradient(90deg, var(--color-primary-500), var(--interactive-primary));
    }
  }
  
  // Button Groups - Modern responsive layout with CSS Grid
  .button-group {
    margin-top: clamp(var(--space-md), 3vw, var(--space-lg));
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-md);
    padding: clamp(var(--space-md), 3vw, var(--space-lg));
    border-radius: var(--radius-lg);
    background: rgba(255, 255, 255, var(--color-mix-light));
    backdrop-filter: blur(var(--space-sm));
    border: var(--border-width-thin) solid rgba(255, 255, 255, var(--opacity-low));
    contain: layout style;
    
    // Modern CSS Grid with auto-fit for responsive behavior
    @media (min-width: 30em) {
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: clamp(var(--space-sm), 2vw, var(--space-lg));
      place-items: center;
      width: fit-content;
      margin-left: auto;
      margin-right: auto;
      padding: clamp(var(--space-lg), 4vw, var(--space-xl));
    }

    @media (min-width: 48em) {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: clamp(var(--space-md), 3vw, var(--space-xl));
    }

    @media (min-width: 64em) {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-2xl);
      padding: var(--space-2xl);
      max-width: 600px;
    }
  }

  .game-button {
    min-height: var(--touch-target-enhanced);
    min-width: var(--touch-target-enhanced);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    transition: var(--transition-normal);

    /* Tablet and above: --breakpoint-md (768px) */
    @media (min-width: 48em) {
      padding: var(--space-md) var(--space-lg);
    }
  }

  /* ==============================================
   * ICON SYSTEM
   * ============================================== */

  /* Consolidated icon sizing system */
  .icon-small {
    height: var(--icon-size-sm);
    width: var(--icon-size-sm);
  }

  .icon-medium {
    height: var(--icon-size-sm);
    width: var(--icon-size-sm);

    /* Tablet and above: --breakpoint-md (768px) */
    @media (min-width: 48em) {
      height: var(--icon-size-md);
      width: var(--icon-size-md);
    }
  }

  .icon-large {
    height: var(--icon-size-xl);
    width: var(--icon-size-xl);
  }

  .icon-white {
    color: var(--color-white);
  }

  /* Game Icon Badge - Modern circular design */
  .game-icon-badge {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--space-3xl);
    height: var(--space-3xl);
    border-radius: var(--radius-full);
    background: linear-gradient(
      135deg,
      var(--btn-primary-bg) 0%,
      var(--interactive-primary-hover) 100%
    );
    border: var(--border-width-thick) solid var(--color-white);
    box-shadow:
      var(--shadow-lg),
      inset 0 1px 0 rgba(255, 255, 255, var(--opacity-low));
    transition: all var(--transition-normal);
    margin-bottom: var(--space-md);

    &::before {
      content: "";
      position: absolute;
      inset: var(--animation-x-offset-small);
      border-radius: var(--radius-full);
      background: linear-gradient(135deg, var(--interactive-primary), var(--color-secondary-500));
      z-index: -1;
      opacity: 0;
      transition: opacity var(--transition-normal);
    }

    /* Tablet and above: --breakpoint-md (768px) */
    @media (min-width: 48em) {
      width: var(--space-3xl);
      height: var(--space-3xl);
    }
  }

  .section-container:hover {
    .game-icon-badge {
      &::before {
        opacity: var(--opacity-medium);
      }

      transform: scale(var(--animation-scale-hover-subtle));
      box-shadow:
        var(--shadow-xl),
        inset 0 1px 0 rgba(255, 255, 255, var(--color-mix-dark));
    }
  }

  .chronology-badge {
    background: linear-gradient(
      135deg,
      var(--interactive-primary) 0%,
      var(--color-primary-600) 100%
    );
  }

  /* ==============================================
   * TYPOGRAPHY SYSTEM
   * ============================================== */

  /* Consolidated typography with consistent patterns */
  .headline-primary {
