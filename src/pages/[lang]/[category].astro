---
import { Picture } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import ButtonLink from "@components/ButtonLink.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "@utils/i18n";
import Headline from "@components/Headline.astro";
import Paragraph from "@components/Paragraph.astro";
import { Icon } from "astro-icon/components";

// Mark this route for static generation
export const prerender = true;

// Get static paths for all supported languages
export async function getStaticPaths() {
  const supportedLanguages = [
    "de",
    "en",
    "es",
    "fr",
    "it",
    "pt",
    "da",
    "nl",
    "sv",
    "fi",
  ] as const;

  const paths = [];

  for (const lang of supportedLanguages) {
    // Load categories based on language
    let categories;
    try {
      categories = await import(
        /* @vite-ignore */ `@json/${lang}_categories.json`
      );
    } catch (error) {
      // Fallback to default language if the specific language file doesn't exist
      categories = await import(/* @vite-ignore */ `@json/de_categories.json`);
    }

    // Create a path for each category
    for (const category of categories.default) {
      paths.push({
        params: { lang, category: category.slug },
        props: {
          categories: categories.default,
          category: category,
          lang,
        },
      });
    }
  }

  return paths;
}

// Get props from getStaticPaths
const { category, lang } = Astro.props;
const t = useTranslations(lang);

interface Category {
  slug: string;
  headline: string;
  introSubline: string;
  imageUrl: string;
  text: string;
}

// No login check needed anymore
const currentCategory = category;
---

<Layout title={`${currentCategory?.headline} Start`}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Hero section with improved contrast and accessibility -->
    <div class="text-center mb-12 bg-gradient-to-br from-zinc-800/60 to-zinc-900/60 backdrop-blur-sm p-8 rounded-2xl shadow-xl">
      <Headline
        className="text-center text-3xl md:text-4xl font-bold text-white mb-4"
        title={currentCategory?.headline}
        level="h1"
      />
      <div class="h-1 w-24 bg-purple-500 rounded-full mx-auto my-4"></div>

      <Paragraph
        className="text-center text-lg font-medium text-zinc-100 max-w-2xl mx-auto"
        description={currentCategory?.introSubline}
      />
    </div>

    <article
      class="flex flex-col items-center gap-8 w-full"
      data-category={currentCategory?.slug}
      aria-labelledby="difficulty-heading"
    >
      <div
        class="relative mx-auto w-full max-w-2xl group overflow-hidden rounded-xl shadow-xl"
        role="img"
        aria-label={currentCategory?.headline + " " + t("category.image.alt")}
      >
        {
          currentCategory?.imageUrl ? (
            <div class="w-full aspect-[16/9] overflow-hidden rounded-xl shadow-lg">
              <Picture
                class="w-full h-full object-cover transition-all duration-700 ease-in-out group-hover:scale-105 motion-reduce:transform-none"
                src={currentCategory.imageUrl}
                width={640}
                height={360}
                formats={["avif", "webp"]}
                alt=""
                loading="eager"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/70 to-transparent" aria-hidden="true" />
            </div>
          ) : (
            <div class="flex items-center justify-center w-full aspect-[16/9] p-6 rounded-xl bg-zinc-800 shadow-lg font-sans text-base text-zinc-50 text-center">
              {t("category.no_image_available")}
            </div>
          )
        }
      </div>

      <div
        class="prose prose-invert prose-zinc max-w-none px-8 py-8 bg-zinc-800/50 rounded-xl shadow-md border border-zinc-700/30 leading-relaxed"
      >
        <Paragraph
          className="text-zinc-100 leading-relaxed text-lg"
          description={currentCategory?.text}
        />
      </div>

      <!-- Music Quiz Section -->
      <div
        class="flex flex-col gap-8 items-center w-full mt-8 bg-gradient-to-br from-zinc-800/40 to-zinc-900/40 backdrop-blur-sm rounded-xl p-8 relative shadow-lg border border-zinc-700/30"
      >
        <div
          class="absolute -top-10 left-1/2 transform -translate-x-1/2 w-20 h-20 rounded-full bg-gradient-to-br from-purple-600 to-indigo-700 flex items-center justify-center shadow-lg border-4 border-zinc-900"
          aria-hidden="true"
        >
          <Icon name="music" class="h-10 w-10 text-white" />
        </div>

        <Headline level="h2" className="text-center text-2xl font-bold text-white mt-6 pt-2">
          {t("category.difficulty.heading")}
        </Headline>

        <Paragraph
          className="text-center max-w-2xl mb-6 text-zinc-100"
          description={t("knowledge.play.description")}
        />

        <div
          class="flex flex-wrap justify-center gap-6 w-full mt-2"
          role="group"
          aria-labelledby="difficulty-heading"
        >
          <!-- Difficulty levels as modern cards -->
          <div class="w-full max-w-xs perspective">
            <ButtonLink
              href={getRelativeLocaleUrl(
                lang,
                `game-${currentCategory?.slug}/easy`,
              )}
              aria-label={t("category.difficulty.easy.label")}
              class="w-full py-5 px-6 bg-gradient-to-br from-green-600 to-green-700 hover:from-green-500 hover:to-green-600 rounded-xl transform hover:scale-[1.03] transition-all duration-300 shadow-md hover:shadow-green-700/20 flex items-center justify-center gap-3 focus:outline-none focus:ring-4 focus:ring-green-500/50 focus:ring-offset-2 focus:ring-offset-zinc-900"
            >
              <Icon name="play" class="h-6 w-6" />
              <span class="text-lg font-medium">{t("category.difficulty.easy")}</span>
            </ButtonLink>
          </div>

          <div class="w-full max-w-xs perspective">
            <ButtonLink
              href={getRelativeLocaleUrl(
                lang,
                `game-${currentCategory?.slug}/medium`,
              )}
              aria-label={t("category.difficulty.medium.label")}
              class="w-full py-5 px-6 bg-gradient-to-br from-blue-600 to-blue-700 hover:from-blue-500 hover:to-blue-600 rounded-xl transform hover:scale-[1.03] transition-all duration-300 shadow-md hover:shadow-blue-700/20 flex items-center justify-center gap-3 focus:outline-none focus:ring-4 focus:ring-blue-500/50 focus:ring-offset-2 focus:ring-offset-zinc-900"
            >
              <Icon name="bolt" class="h-6 w-6" />
              <span class="text-lg font-medium">{t("category.difficulty.medium")}</span>
            </ButtonLink>
          </div>

          <div class="w-full max-w-xs perspective">
            <ButtonLink
              href={getRelativeLocaleUrl(
                lang,
                `game-${currentCategory?.slug}/hard`,
              )}
              aria-label={t("category.difficulty.hard.label")}
              class="w-full py-5 px-6 bg-gradient-to-br from-red-600 to-red-700 hover:from-red-500 hover:to-red-600 rounded-xl transform hover:scale-[1.03] transition-all duration-300 shadow-md hover:shadow-red-700/20 flex items-center justify-center gap-3 focus:outline-none focus:ring-4 focus:ring-red-500/50 focus:ring-offset-2 focus:ring-offset-zinc-900"
            >
              <Icon name="fire" class="h-6 w-6" />
              <span class="text-lg font-medium">{t("category.difficulty.hard")}</span>
            </ButtonLink>
          </div>
        </div>
      </div>

      <!-- Cover Puzzle Section -->
      <div
        class="flex flex-col gap-6 items-center w-full mt-8 bg-gradient-to-br from-zinc-800/40 to-zinc-900/40 backdrop-blur-sm rounded-xl p-8 relative shadow-lg border border-zinc-700/30"
      >
        <div
          class="absolute -top-10 left-1/2 transform -translate-x-1/2 w-20 h-20 rounded-full bg-gradient-to-br from-indigo-600 to-purple-700 flex items-center justify-center shadow-lg border-4 border-zinc-900"
          aria-hidden="true"
        >
          <Icon name="image" class="h-10 w-10 text-white" />
        </div>

        <Headline level="h2" className="text-center text-2xl font-bold text-white mt-6 pt-2">
          {t("play.cover.puzzle")}
        </Headline>

        <Paragraph
          className="text-center max-w-2xl mb-6 text-zinc-100"
          description={t("play.cover.puzzle.description")}
        />

        <div
          class="flex flex-wrap justify-center gap-6 w-full mt-2 perspective"
          role="group"
          aria-label="Cover Puzzle Game"
        >
          <ButtonLink
            href={getRelativeLocaleUrl(
              lang,
              `game-puzzle-${currentCategory?.slug}`,
            )}
            aria-label={t("play.cover.puzzle")}
            class="py-5 px-8 bg-gradient-to-br from-purple-600 to-purple-800 hover:from-purple-500 hover:to-purple-700 rounded-xl transform hover:scale-[1.03] transition-all duration-300 shadow-lg hover:shadow-purple-900/20 flex items-center justify-center gap-3 focus:outline-none focus:ring-4 focus:ring-purple-500/50 focus:ring-offset-2 focus:ring-offset-zinc-900"
          >
            <Icon name="puzzle" class="h-6 w-6" />
            <span class="text-lg font-medium">{t("play.cover.puzzle")}</span>
          </ButtonLink>
        </div>
      </div>
    </article>

    <!-- WCAG information -->
    <div class="mt-16 text-center" aria-live="polite">
      <p class="text-sm text-zinc-400 flex items-center justify-center">
        <span class="inline-block mr-2" role="img" aria-label="Barrierefreiheit">â™¿</span>
        <span>{t("accessibility.wcag")}</span>
      </p>
    </div>
  </div>
</Layout>

<style>
  /* Enhanced 3D effect with perspective */
  .perspective {
    perspective: 1000px;
  }
  
  .perspective:hover button {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 15px 25px -12px rgba(0, 0, 0, 0.4);
  }
  
  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .perspective:hover button,
    .group-hover\:scale-105,
    .hover\:scale-\[1\.03\],
    .transform,
    .transition-all {
      transform: none !important;
      transition: none !important;
    }
  }

  /* High Contrast Mode Support */
  @media (forced-colors: active) {
    article[data-category] {
      border: 2px solid CanvasText;
    }

    [role="group"] :global(a) {
      border: 2px solid ButtonText !important;
      forced-color-adjust: none;
    }
    
    /* Ensure proper focus visibility in high contrast mode */
    :global(a:focus-visible), :global(button:focus-visible) {
      outline: 3px solid ButtonText !important;
      outline-offset: 3px !important;
    }
  }

  /* Improved focus styles for better keyboard navigation */
  :global(a:focus-visible), :global(button:focus-visible) {
    outline: 3px solid #a855f7 !important;
    outline-offset: 3px !important;
    transition: outline-offset 0.1s ease !important;
  }
  
  /* Better link readability */
  .prose :global(a) {
    color: #c084fc !important;
    text-decoration: underline;
    text-underline-offset: 3px;
    font-weight: 500;
  }
  
  .prose :global(a:hover) {
    color: #d8b4fe !important;
  }
</style>
