    .game-container {
      transition: none;
    }
  }

  /* Print styles */
  @media print {
    .game-header {
      break-inside: avoid;
    }

    .game-badge {
      border: 1px solid black;
      background: none !important;
    }

    .game-container {
      border: 1px solid black;
      background: none !important;
      box-shadow: none;
    }
  }
</style>
