---
// Tailwind CSS 4 Test Page
// This page tests the integration of Tailwind CSS 4 with the existing melody-mind project

import Layout from "../../layouts/Layout.astro";
import TailwindTest from "../../components/TailwindTest.astro";
---

<Layout
  title="Tailwind CSS 4 Test"
  description="Test page to verify Tailwind CSS 4 integration with melody-mind"
  keywords="tailwind, css, test, melody-mind"
>
  <main class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900">
    <!-- Header Section -->
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl md:text-6xl font-bold text-white text-center mb-8">
        ðŸŽ¨ Tailwind CSS 4
        <span class="bg-gradient-to-r from-pink-400 to-purple-600 bg-clip-text text-transparent">
          Integration Test
        </span>
      </h1>

      <p class="text-xl text-white/80 text-center max-w-3xl mx-auto mb-12">
        This page demonstrates that Tailwind CSS 4 is successfully integrated with your melody-mind
        project. All styles below are generated using Tailwind utility classes.
      </p>
    </div>

    <!-- Test Component -->
    <TailwindTest />

    <!-- Additional Tests -->
    <div class="container mx-auto px-4 py-16">
      <!-- Grid Layout Test -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-white mb-8 text-center">Grid System Test</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            [1, 2, 3, 4].map((num) => (
              <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
                <h3 class="text-white font-semibold text-lg mb-2">Card {num}</h3>
                <p class="text-white/70">Responsive grid system working perfectly!</p>
              </div>
            ))
          }
        </div>
      </section>

      <!-- CSS Variables Integration Test -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-white mb-8 text-center">CSS Variables Integration</h2>
        <div class="max-w-2xl mx-auto">
          <div
            class="bg-[var(--bg-secondary)] border border-[var(--border-primary)] rounded-lg p-8"
          >
            <h3 class="text-[var(--text-primary)] text-2xl font-bold mb-4">
              Using Existing CSS Variables
            </h3>
            <p class="text-[var(--text-secondary)] mb-4">
              This content uses your existing CSS variables from global.css through Tailwind's
              arbitrary value syntax: <code
                class="bg-[var(--bg-tertiary)] text-[var(--text-primary)] px-2 py-1 rounded"
                >bg-[var(--bg-secondary)]</code
              >
            </p>
            <button
              class="bg-[var(--interactive-primary)] hover:bg-[var(--interactive-primary-hover)]
                          text-[var(--btn-primary-text)] px-6 py-3 rounded-lg font-medium
                          transition-colors duration-200"
            >
              Custom Variable Button
            </button>
          </div>
        </div>
      </section>

      <!-- Animation and Interaction Tests -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-white mb-8 text-center">Animations & Interactions</h2>
        <div class="flex flex-wrap justify-center gap-4">
          <button
            class="bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-lg
                        transform hover:scale-105 transition-all duration-200
                        focus:outline-none focus:ring-4 focus:ring-red-300"
          >
            Hover to Scale
          </button>

          <button
            class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg
                        hover:rotate-3 transition-all duration-300
                        focus:outline-none focus:ring-4 focus:ring-green-300"
          >
            Hover to Rotate
          </button>

          <button
            class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg
                        hover:shadow-lg hover:shadow-blue-500/50 transition-all duration-300
                        focus:outline-none focus:ring-4 focus:ring-blue-300"
          >
            Hover for Shadow
          </button>

          <div
            class="bg-yellow-400 text-yellow-900 px-6 py-3 rounded-lg
                     animate-pulse cursor-pointer"
          >
            Pulsing Element
          </div>
        </div>
      </section>

      <!-- Typography Test -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-white mb-8 text-center">Typography System</h2>
        <div class="max-w-4xl mx-auto bg-white/10 rounded-xl p-8 backdrop-blur-sm">
          <h1 class="text-5xl font-extrabold text-white mb-4">Heading 1</h1>
          <h2 class="text-4xl font-bold text-white/90 mb-4">Heading 2</h2>
          <h3 class="text-3xl font-semibold text-white/80 mb-4">Heading 3</h3>
          <p class="text-lg text-white/70 leading-relaxed mb-4">
            This is a paragraph with regular text. Tailwind's typography utilities provide
            consistent spacing and readable line heights across all screen sizes.
          </p>
          <p class="text-sm text-white/60 italic">Smaller italic text for captions and metadata.</p>
        </div>
      </section>

      <!-- Status Indicator -->
      <div class="text-center">
        <div
          class="inline-flex items-center gap-3 bg-green-500/20 border border-green-500/30
                   rounded-full px-6 py-3 backdrop-blur-sm"
        >
          <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
          <span class="text-green-300 font-medium"> âœ… Tailwind CSS 4 is working correctly! </span>
        </div>
      </div>
    </div>
  </main>
</Layout>
