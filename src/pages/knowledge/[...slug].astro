    display: block;
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
    color: var(--color-gn-amber-300);
  }

  .knowledge__pill-icon--teal {
    color: var(--color-gn-teal-300);
  }

  .knowledge__title {
    margin: 0;
    color: var(--gn-ink);
  }

  .knowledge__summary {
    margin: 0;
    max-width: 64ch;
    color: var(--color-gn-parchment-100);
  }

  .knowledge__stats {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    font-size: 0.75rem;
    color: var(--gn-ink-muted);
  }

  @media (min-width: 640px) {
    .knowledge__stats {
      font-size: 0.875rem;
    }
  }

  .knowledge__aside {
    display: flex;
    flex-direction: column;
