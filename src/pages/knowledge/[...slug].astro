    .knowledge__hero {
      grid-template-columns: 1.1fr 0.9fr;
      align-items: stretch;
    }
  }

  .knowledge__hero-panel {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .knowledge__meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.75rem;
    color: var(--gn-ink-muted);
  }

