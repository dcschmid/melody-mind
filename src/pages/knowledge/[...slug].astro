    .reading-progress {
      height: 0.375rem;
    }
  }

  @media (min-width: 1024px) {
    .reading-progress {
      height: 0.5rem;
    }
  }

  .knowledge {
    position: relative;
    min-height: 100vh;
    overflow-x: hidden;
    color: var(--gn-ink);
    background-color: var(--gn-bg);
    font-family: var(--font-sans);
    line-height: var(--line-height-relaxed);
  }

  .knowledge__backdrop {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      var(--color-gn-soot-900) 0%,
      var(--color-gn-soot-950) 65%,
      #000000 100%
    );
    z-index: 0;
    pointer-events: none;
  }

  .knowledge__texture {
    position: absolute;
    inset: 0;
    opacity: 0.2;
    background-image: var(--gn-halftone), var(--gn-noise);
    background-blend-mode: screen, normal;
    pointer-events: none;
    z-index: 1;
