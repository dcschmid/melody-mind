---
/**
 * @component 404ErrorPage
 * @description 404 Not Found page for MelodyMind
 */

import { getLangFromUrl, useTranslations } from "@utils/i18n";
import Layout from "../layouts/Layout.astro";
import { buildPageSeo } from "../utils/seo/buildPageSeo";
import { Icon } from "astro-icon/components";
import Headline from "../components/Headline.astro";
import Paragraph from "../components/Paragraph.astro";

const lang = String(getLangFromUrl(Astro.url));
const t = useTranslations(lang);

export const prerender = true;

const title = t("error.404.title");
const description = t("error.404.description");

// Base site URL (language root fallback)
const base = Astro.site?.toString().replace(/\/$/, "") || "https://melody-mind.de";

// Breadcrumbs (Home -> 404)
const breadcrumbs = [
  { name: t("nav.home") || "Home", url: `${base}/${lang}` },
  { name: title, url: `${base}/${lang}/404` },
];

// Build consolidated pageSeo (noindex)
const pageSeo = buildPageSeo({
  title: `${title} - Melody Mind`,
  description,
  url: `${base}/${lang}/404`,
  language: lang,
  index: false,
  follow: true,
  contentKind: "generic",
  enrichedParts: [t("error.404.message"), t("error.404.cta_title")].filter(Boolean) as string[],
  breadcrumbs,
});
---

<Layout
  pageSeo={{
    ...pageSeo,
    structuredData: pageSeo.structuredData,
  }}
  showHeader={true}
  showHeaderIcons={true}
  {breadcrumbs}
>
  <main class="flex min-h-screen items-center bg-slate-50 py-16 dark:bg-slate-900">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div
        class="rounded-xl border border-slate-200 bg-white p-12 text-center shadow-lg dark:border-slate-700 dark:bg-slate-800 dark:shadow-xl"
      >
        <div class="relative mb-16">
          <Icon
            name="x-circle"
            class="mx-auto mb-6 h-24 w-24 text-blue-400 opacity-70"
            aria-hidden="true"
          />
          <div
            class="md:text-10xl mb-4 text-8xl leading-none font-bold text-blue-500 text-shadow-lg"
          >
            404
          </div>
        </div>

        <div class="mb-16">
          <Headline level="h1" textSize="3xl" title={t("error.404.heading")} />
          <Paragraph
            className="mb-4 text-center text-lg leading-relaxed text-slate-600 dark:text-slate-300"
          >
            {t("error.404.message")}
          </Paragraph>
          <Paragraph
            className="text-center text-base leading-relaxed text-slate-500 dark:text-slate-400"
          >
            {t("error.404.description")}
          </Paragraph>
        </div>

        <div class="mb-16 flex flex-col justify-center gap-4 sm:flex-row">
          <a
            href="/"
            class="inline-flex transform items-center justify-center gap-3 rounded-lg border-2 border-blue-600 bg-blue-600 px-6 py-3 font-semibold text-white transition-all duration-200 hover:-translate-y-0.5 hover:border-blue-700 hover:bg-blue-700"
          >
            <Icon name="home" class="h-5 w-5" aria-hidden="true" />
            {t("error.404.actions.home")}
          </a>
          <button
            id="go-back-button"
            class="inline-flex transform items-center justify-center gap-3 rounded-lg border-2 border-slate-300 bg-transparent px-6 py-3 font-semibold text-slate-700 transition-all duration-200 hover:-translate-y-0.5 hover:border-slate-400 hover:bg-slate-100 dark:border-slate-600 dark:text-slate-200 dark:hover:border-slate-500 dark:hover:bg-slate-700"
          >
            <Icon name="arrow-left" class="h-5 w-5" aria-hidden="true" />
            {t("error.404.actions.back")}
          </button>
        </div>

        <div class="mt-16 border-t border-slate-200 pt-8 dark:border-slate-700">
          <Headline level="h2" textSize="xl" title={t("error.404.cta_title")} />
          <ul class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <li>
              <a
                href="/playlists"
                class="flex transform items-center gap-3 rounded-lg border border-slate-200 bg-slate-100 p-4 text-slate-700 no-underline transition-all duration-200 hover:-translate-y-0.5 hover:border-blue-400 hover:bg-slate-200 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-200 dark:hover:border-blue-400 dark:hover:bg-slate-600"
              >
                <Icon name="music" class="h-6 w-6 text-blue-400" aria-hidden="true" />
                {t("error.404.actions.playlists")}
              </a>
            </li>
            <li>
              <a
                href="/gamehome"
                class="flex transform items-center gap-3 rounded-lg border border-slate-200 bg-slate-100 p-4 text-slate-700 no-underline transition-all duration-200 hover:-translate-y-0.5 hover:border-blue-400 hover:bg-slate-200 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-200 dark:hover:border-blue-400 dark:hover:bg-slate-600"
              >
                <Icon name="gamepad" class="h-6 w-6 text-blue-400" aria-hidden="true" />
                {t("error.404.actions.quiz")}
              </a>
            </li>
            <li>
              <a
                href="/highscores"
                class="flex transform items-center gap-3 rounded-lg border border-slate-200 bg-slate-100 p-4 text-slate-700 no-underline transition-all duration-200 hover:-translate-y-0.5 hover:border-blue-400 hover:bg-slate-200 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-200 dark:hover:border-blue-400 dark:hover:bg-slate-600"
              >
                <Icon name="trophy" class="h-6 w-6 text-blue-400" aria-hidden="true" />
                {t("error.404.actions.highscores")}
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Handle go back button click
  document.addEventListener("DOMContentLoaded", () => {
    const goBackButton = document.getElementById("go-back-button");
    if (goBackButton) {
      goBackButton.addEventListener("click", () => {
        window.history.back();
      });
    }
  });
</script>
