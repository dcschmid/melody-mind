---
// Simple RSS Test Page
const languages = [
  "de",
  "en",
  "es",
  "fr",
  "it",
  "pt",
  "da",
  "nl",
  "sv",
  "fi",
  "cn",
  "ru",
  "jp",
  "uk",
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RSS Feed Links</title>
    <style>
      body {
        font-family: system-ui;
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: #f5f5f5;
      }
      .feed-link {
        display: block;
        padding: 1rem;
        margin: 0.5rem 0;
        background: white;
        border-radius: 8px;
        text-decoration: none;
        color: #333;
        border-left: 4px solid #007acc;
      }
      .feed-link:hover {
        background: #f0f8ff;
      }
      .lang {
        font-weight: bold;
        text-transform: uppercase;
      }
      .test-button {
        background: #007acc;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        margin-left: 1rem;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h1>üéôÔ∏è MelodyMind RSS Feeds Test</h1>
    <p>Click any link to test the RSS feed for that language:</p>

    {
      languages.map((lang) => (
        <div class="feed-link">
          <span class="lang">{lang}</span>:
          <a href={`/${lang}/podcasts/rss.xml`} target="_blank">
            /{lang}/podcasts/rss.xml
          </a>
          <button
            class="test-button"
            onclick={`window.open('/${lang}/podcasts/rss.xml', '_blank')`}
          >
            Test Feed
          </button>
        </div>
      ))
    }

    <div style="margin-top: 2rem; padding: 1rem; background: #e8f4ff; border-radius: 8px;">
      <h3>üß™ How to Test:</h3>
      <ol>
        <li>Click "Test Feed" buttons to open RSS feeds</li>
        <li>Check if XML is valid and contains podcast episodes</li>
        <li>
          Validate with: <a href="https://validator.w3.org/feed/" target="_blank">RSS Validator</a>
        </li>
        <li>
          Test podcast page subscribe buttons: <a href="/de/podcasts" target="_blank"
            >/de/podcasts</a>
        </li>
      </ol>
    </div>
  </body>
</html>
