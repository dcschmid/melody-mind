---
import Layout from "@layouts/Layout.astro";
import PageShell from "@components/Shared/PageShell.astro";
import { buildPageSeo, type StructuredData } from "@utils/seo/buildPageSeo";
import { resolvePageUrl } from "@utils/siteUrls";

const title = "Imprint (Impressum)";
const description =
  "Legal disclosure for Melody Mind Knowledge in accordance with German law.";
const currentUrl = resolvePageUrl(Astro.site, "/imprint");

const breadcrumbs = [
  { name: "Home", url: resolvePageUrl(Astro.site, "/") },
  { name: title, url: currentUrl },
];

const pageSeo = buildPageSeo({
  title,
  description,
  url: currentUrl,
  contentKind: "generic",
  breadcrumbs,
  structuredData: [] as StructuredData[],
  enrichedParts: [title, description],
  fallbackKeywords: ["imprint", "impressum", "legal disclosure"],
  keywordLimit: 24,
  maxDescription: 150,
  image: "/knowledge.png",
  publishDate: new Date(),
  modifiedDate: new Date(),
  index: true,
  follow: true,
  autoSocialImage: false,
});
---

<Layout {pageSeo} {breadcrumbs}>
  <PageShell containerClass="container-shell py-12">
    <header class="mb-10 space-y-3">
      <p class="text-gn-amber-300 text-xs font-semibold tracking-[0.14em] uppercase">
        Legal
      </p>
      <h1 class="text-gn-parchment-50 text-3xl font-semibold sm:text-4xl">
        Imprint (Impressum)
      </h1>
      <p class="text-gn-parchment-200 text-base">
        Required legal information for services provided from Germany.
      </p>
    </header>

    <section class="gn-panel bg-gn-soot-800/90 mb-8 space-y-2 rounded-2xl p-6">
      <h2 class="text-gn-parchment-50 text-xl font-semibold">Service Provider</h2>
      <p class="text-gn-parchment-200">Daniel Schmid</p>
      <p class="text-gn-parchment-200">Hiltenspergerstr. 78</p>
      <p class="text-gn-parchment-200">80796 München</p>
      <p class="text-gn-parchment-200">Germany</p>
    </section>

    <section class="gn-panel bg-gn-soot-800/90 mb-8 space-y-2 rounded-2xl p-6">
      <h2 class="text-gn-parchment-50 text-xl font-semibold">Contact</h2>
      <p class="text-gn-parchment-200">
        Email:
        <a
          class="text-gn-amber-300 decoration-gn-amber-300/60 underline underline-offset-2"
          href="mailto:dcschmid@murena.io"
        >
          dcschmid@murena.io
        </a>
      </p>
    </section>

    <section class="gn-panel bg-gn-soot-800/90 mb-8 space-y-2 rounded-2xl p-6">
      <h2 class="text-gn-parchment-50 text-xl font-semibold">
        Responsible for Content (§ 18 Abs. 2 MStV / § 55 RStV)
      </h2>
      <p class="text-gn-parchment-200">
        Daniel Schmid, Hiltenspergerstr. 78, 80796 München, Germany
      </p>
    </section>

    <section class="gn-panel bg-gn-soot-800/90 mb-8 space-y-3 rounded-2xl p-6">
      <h2 class="text-gn-parchment-50 text-xl font-semibold">Dispute Resolution</h2>
      <p class="text-gn-parchment-200">
        The European Commission provides a platform for online dispute resolution (OS):
        <a
          class="text-gn-amber-300 decoration-gn-amber-300/60 underline underline-offset-2"
          href="https://ec.europa.eu/consumers/odr"
          target="_blank"
          rel="noreferrer"
        >
          https://ec.europa.eu/consumers/odr
        </a>
      </p>
      <p class="text-gn-parchment-200">
        We are not willing or obliged to participate in dispute resolution proceedings
        before a consumer arbitration board.
      </p>
    </section>

    <section class="gn-panel bg-gn-soot-800/90 mb-12 space-y-3 rounded-2xl p-6">
      <h2 class="text-gn-parchment-50 text-xl font-semibold">Liability</h2>
      <p class="text-gn-parchment-200">
        While we carefully curate content, we cannot guarantee completeness or accuracy.
        External links are checked when added, but we do not assume liability for
        third-party content; responsibility remains with the respective provider.
      </p>
    </section>
  </PageShell>
</Layout>
