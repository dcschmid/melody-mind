---
import Layout from "@layouts/Layout.astro";
import { buildPageSeo, type StructuredData } from "@utils/seo/buildPageSeo";

const title = "Imprint (Impressum)";
const description = "Legal disclosure for Melody Mind Knowledge in accordance with German law.";
const baseUrl = Astro.site?.toString().replace(/\/$/, "") || "https://melody-mind.de";
const currentUrl = `${baseUrl}/imprint`;

const breadcrumbs = [
  { name: "Home", url: `${baseUrl}/` },
  { name: title, url: currentUrl },
];

const pageSeo = buildPageSeo({
  title,
  description,
  url: currentUrl,
  contentKind: "generic",
  breadcrumbs,
  structuredData: [] as StructuredData[],
  enrichedParts: [title, description],
  fallbackKeywords: ["imprint", "impressum", "legal disclosure"],
  keywordLimit: 24,
  maxDescription: 150,
  image: "/knowledge.png",
  publishDate: new Date(),
  modifiedDate: new Date(),
  index: true,
  follow: true,
  autoSocialImage: false,
});
---

<Layout {pageSeo} {breadcrumbs}>
  <div class="relative min-h-screen text-gn-parchment-50">
    <div class="absolute inset-0 pointer-events-none"></div>
    <div class="relative mx-auto px-4 py-12 sm:px-6 lg:px-8">
      <header class="mb-10 space-y-3">
        <p class="text-xs font-semibold uppercase tracking-[0.14em] text-gn-amber-300">Legal</p>
        <h1 class="text-3xl font-semibold text-gn-parchment-50 sm:text-4xl">Imprint (Impressum)</h1>
        <p class="text-base text-gn-parchment-200">
          Required legal information for services provided from Germany.
        </p>
      </header>

      <section class="mb-8 space-y-2 rounded-2xl gn-panel bg-gn-soot-800/90 p-6">
        <h2 class="text-xl font-semibold text-gn-parchment-50">Service Provider</h2>
        <p class="text-gn-parchment-200">Daniel Schmid</p>
        <p class="text-gn-parchment-200">Hiltenspergerstr. 78</p>
        <p class="text-gn-parchment-200">80796 München</p>
        <p class="text-gn-parchment-200">Germany</p>
      </section>

      <section class="mb-8 space-y-2 rounded-2xl gn-panel bg-gn-soot-800/90 p-6">
        <h2 class="text-xl font-semibold text-gn-parchment-50">Contact</h2>
        <p class="text-gn-parchment-200">
          Email:
          <a class="text-gn-amber-300 underline decoration-gn-amber-300/60 underline-offset-2" href="mailto:dcschmid@murena.io">
            dcschmid@murena.io
          </a>
        </p>
      </section>

      <section class="mb-8 space-y-2 rounded-2xl gn-panel bg-gn-soot-800/90 p-6">
        <h2 class="text-xl font-semibold text-gn-parchment-50">Responsible for Content (§ 18 Abs. 2 MStV / § 55 RStV)</h2>
        <p class="text-gn-parchment-200">Daniel Schmid, Hiltenspergerstr. 78, 80796 München, Germany</p>
      </section>

      <section class="mb-8 space-y-3 rounded-2xl gn-panel bg-gn-soot-800/90 p-6">
        <h2 class="text-xl font-semibold text-gn-parchment-50">Dispute Resolution</h2>
        <p class="text-gn-parchment-200">
          The European Commission provides a platform for online dispute resolution (OS):{" "}
          <a class="text-gn-amber-300 underline decoration-gn-amber-300/60 underline-offset-2" href="https://ec.europa.eu/consumers/odr" target="_blank" rel="noreferrer">
            https://ec.europa.eu/consumers/odr
          </a>
        </p>
        <p class="text-gn-parchment-200">
          We are not willing or obliged to participate in dispute resolution proceedings before a consumer arbitration board.
        </p>
      </section>

      <section class="mb-12 space-y-3 rounded-2xl gn-panel bg-gn-soot-800/90 p-6">
        <h2 class="text-xl font-semibold text-gn-parchment-50">Liability</h2>
        <p class="text-gn-parchment-200">
          While we carefully curate content, we cannot guarantee completeness or accuracy. External links are checked when added,
          but we do not assume liability for third-party content; responsibility remains with the respective provider.
        </p>
      </section>
    </div>
  </div>
</Layout>
