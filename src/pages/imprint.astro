---
import Layout from "@layouts/Layout.astro";
import PageShell from "@components/Shared/PageShell.astro";
import { buildPageSeo, type StructuredData } from "@utils/seo/buildPageSeo";
import { resolvePageUrl } from "@utils/siteUrls";

const title = "Imprint (Impressum)";
const description =
  "Legal disclosure for Melody Mind Knowledge in accordance with German law.";
const currentUrl = resolvePageUrl(Astro.site, "/imprint");

const breadcrumbs = [
  { name: "Home", url: resolvePageUrl(Astro.site, "/") },
  { name: title, url: currentUrl },
];

const pageSeo = buildPageSeo({
  title,
  description,
  url: currentUrl,
  contentKind: "generic",
  breadcrumbs,
  structuredData: [] as StructuredData[],
  enrichedParts: [title, description],
  fallbackKeywords: ["imprint", "impressum", "legal disclosure"],
  keywordLimit: 24,
  maxDescription: 150,
  image: "/knowledge.png",
  publishDate: new Date(),
  modifiedDate: new Date(),
  index: true,
  follow: true,
  autoSocialImage: false,
});
---

<Layout {pageSeo} {breadcrumbs}>
  <PageShell containerClass="page-shell__container--spacious">
    <div class="legal-page">
      <header class="legal-page__header">
        <p class="legal-page__eyebrow">Legal</p>
        <h1 class="legal-page__title">Imprint (Impressum)</h1>
        <p class="legal-page__lead">
          Required legal information for services provided from Germany.
        </p>
      </header>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Service Provider</h2>
        <p class="legal-page__text">Daniel Schmid</p>
        <p class="legal-page__text">Hiltenspergerstr. 78</p>
        <p class="legal-page__text">80796 München</p>
        <p class="legal-page__text">Germany</p>
        <p class="legal-page__text">This website is a non-commercial private project.</p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Contact</h2>
        <p class="legal-page__text">
          Email:
          <a class="legal-page__link" href="mailto:dcschmid@murena.io">
            dcschmid@murena.io
          </a>
        </p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">
          Responsible for Editorial Content (§ 18 Abs. 2 MStV)
        </h2>
        <p class="legal-page__text">
          Daniel Schmid, Hiltenspergerstr. 78, 80796 München, Germany
        </p>
        <p class="legal-page__text">
          (Previously referenced in older legal notices as § 55 RStV.)
        </p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Register Entry</h2>
        <p class="legal-page__text">
          No commercial register entry exists for this private, non-commercial project.
        </p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">VAT Identification Number</h2>
        <p class="legal-page__text">
          No VAT identification number (USt-IdNr.) is available, as this is not a
          commercial activity.
        </p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Dispute Resolution</h2>
        <p class="legal-page__text">
          The European Commission provides a platform for online dispute resolution (OS):
          <a
            class="legal-page__link"
            href="https://ec.europa.eu/consumers/odr"
            target="_blank"
            rel="noreferrer"
          >
            https://ec.europa.eu/consumers/odr
          </a>
        </p>
        <p class="legal-page__text">
          We are neither willing nor obliged to participate in dispute resolution
          proceedings before a consumer arbitration board.
        </p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Liability for Own Content</h2>
        <p class="legal-page__text">
          We create content with great care. However, we cannot guarantee that all
          information is complete, correct, or up to date at all times. Use of the
          information on this website is at your own responsibility.
        </p>
        <p class="legal-page__text">
          As a service provider, we are responsible for our own content on these pages in
          accordance with general laws (§ 5 TMG). Mandatory legal obligations remain
          unaffected.
        </p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Liability for External Links (§ 8 TMG)</h2>
        <p class="legal-page__text">
          This website contains links to external third-party websites. We have no
          influence over the content of those websites and therefore cannot accept any
          liability for third-party content.
        </p>
        <p class="legal-page__text">
          Linked pages were checked for possible legal violations at the time of linking.
          Permanent monitoring of linked content is not reasonable without concrete
          evidence of a violation. If we become aware of legal infringements, such links
          will be removed promptly.
        </p>
      </section>
    </div>
  </PageShell>
</Layout>
<style>
  .panel {
    --panel-radius: 1.5rem;
    --panel-padding: 1.5rem;
    --panel-bg: color-mix(in srgb, var(--gn-bg-muted) 92%, transparent);
    --panel-border: color-mix(in srgb, var(--gn-panel-border) 85%, transparent);
    position: relative;
    border-radius: var(--panel-radius);
    background: var(--panel-bg);
    border: 2px solid var(--panel-border);
    box-shadow: var(--gn-offset-shadow);
    padding: var(--panel-padding);
  }

  .panel::after {
    content: "";
    position: absolute;
    inset: 4px;
    border: 1px solid var(--gn-panel-inner);
    border-radius: calc(var(--panel-radius) - 0.25rem);
    pointer-events: none;
  }

  .panel--compact {
    --panel-padding: 1rem;
  }

  .panel--tight {
    --panel-padding: 1.25rem;
  }

  .panel--card {
    --panel-radius: 1.25rem;
    --panel-padding: 1.25rem;
  }

  .legal-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .legal-page__header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .legal-page__eyebrow {
    font-size: 1.125rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    font-weight: 600;
    color: var(--color-gn-amber-300);
  }

  .legal-page__title {
    font-size: 2.125rem;
    font-weight: 600;
    color: var(--gn-ink);
    margin: 0;
  }

  @media (min-width: 640px) {
    .legal-page__title {
      font-size: 2.425rem;
    }
  }

  .legal-page__lead {
    font-size: 1.125rem;
    color: var(--gn-ink-muted);
    margin: 0;
  }

  .legal-page__section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .legal-page__section-title {
    font-size: 1.225rem;
    font-weight: 600;
    color: var(--gn-ink);
    margin: 0;
  }

  .legal-page__text {
    margin: 0;
    color: var(--gn-ink-muted);
    line-height: 1.6;
  }

  .legal-page__link {
    color: var(--color-gn-amber-300);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .legal-page__link:hover {
    color: var(--color-gn-amber-200);
  }
</style>
