---
import Layout from "@layouts/Layout.astro";
import PageShell from "@components/Shared/PageShell.astro";
import { buildPageSeo, type StructuredData } from "@utils/seo/buildPageSeo";
import { resolvePageUrl } from "@utils/siteUrls";

const title = "Imprint (Impressum)";
const description =
  "Legal disclosure for Melody Mind Knowledge in accordance with German law.";
const currentUrl = resolvePageUrl(Astro.site, "/imprint");

const breadcrumbs = [
  { name: "Home", url: resolvePageUrl(Astro.site, "/") },
  { name: title, url: currentUrl },
];

const pageSeo = buildPageSeo({
  title,
  description,
  url: currentUrl,
  contentKind: "generic",
  breadcrumbs,
  structuredData: [] as StructuredData[],
  enrichedParts: [title, description],
  fallbackKeywords: ["imprint", "impressum", "legal disclosure"],
  keywordLimit: 24,
  maxDescription: 150,
  image: "/knowledge.png",
  publishDate: new Date(),
  modifiedDate: new Date(),
  index: true,
  follow: true,
  autoSocialImage: false,
});
---

<Layout {pageSeo} {breadcrumbs}>
  <PageShell containerClass="page-shell__container--spacious">
    <div class="legal-page">
      <header class="legal-page__header">
        <p class="legal-page__eyebrow">Legal</p>
        <h1 class="legal-page__title">Imprint (Impressum)</h1>
        <p class="legal-page__lead">
          Required legal information for services provided from Germany.
        </p>
      </header>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Service Provider</h2>
        <p class="legal-page__text">Daniel Schmid</p>
        <p class="legal-page__text">Hiltenspergerstr. 78</p>
        <p class="legal-page__text">80796 München</p>
        <p class="legal-page__text">Germany</p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Contact</h2>
        <p class="legal-page__text">
          Email:
          <a class="legal-page__link" href="mailto:dcschmid@murena.io">
            dcschmid@murena.io
          </a>
        </p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">
          Responsible for Content (§ 18 Abs. 2 MStV / § 55 RStV)
        </h2>
        <p class="legal-page__text">
          Daniel Schmid, Hiltenspergerstr. 78, 80796 München, Germany
        </p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Dispute Resolution</h2>
        <p class="legal-page__text">
          The European Commission provides a platform for online dispute resolution (OS):
          <a
            class="legal-page__link"
            href="https://ec.europa.eu/consumers/odr"
            target="_blank"
            rel="noreferrer"
          >
            https://ec.europa.eu/consumers/odr
          </a>
        </p>
        <p class="legal-page__text">
          We are not willing or obliged to participate in dispute resolution proceedings
          before a consumer arbitration board.
        </p>
      </section>

      <section class="panel legal-page__section">
        <h2 class="legal-page__section-title">Liability</h2>
        <p class="legal-page__text">
          While we carefully curate content, we cannot guarantee completeness or accuracy.
          External links are checked when added, but we do not assume liability for
          third-party content; responsibility remains with the respective provider.
        </p>
      </section>
    </div>
  </PageShell>
</Layout>
