---
import { Icon } from "astro-icon/components";

import Button from "../../components/Button.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Spiel-Home" showHeader={false}>
  <div class="content">
    <Icon name="golden-coins" width={80} height={80} />
    <div class="headline">Glückwunsch!</div>
    <div class="subline">Punktestand verdoppelt!</div>
    <div class="point">+ 125 Pt</div>
    <div class="centerButton">
      <Button buttonText="Auflösung" url="/results/result-one-false" />
    </div>
  </div>
</Layout>

<style>
  .content {
    display: flex;
    width: 366px;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-3);
  }

  .headline {
    color: var(--colour-text-primary);
    font-size: 48px;
    font-style: normal;
    font-weight: 900;
    line-height: 120%;
  }

  .subline {
    color: var(--colour-text-secondary);
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
  }

  .point {
    color: var(--colour-text-primary);
    font-size: 40px;
    font-style: normal;
    font-weight: 900;
    line-height: normal;
    letter-spacing: 2px;
  }

  .centerButton {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-spacing-md);
  }
</style>

<script>
  import JSConfetti from "js-confetti";

  const jsConfetti = new JSConfetti();

  window.addEventListener("load", function (_event: Event): void {
    jsConfetti.addConfetti().then(() => jsConfetti.clearCanvas());
  });
</script>
