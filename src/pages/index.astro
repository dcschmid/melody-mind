---
import { Icon } from "astro-icon/components";
import Layout from "@layouts/Layout.astro";
import { Picture } from "astro:assets";

const title = "Melody Mind - Das ultimative Musik-Quiz";
const description =
  "Teste dein Musikwissen in unserem interaktiven Quiz. Erkenne Songs, Alben und Künstler, sammle Punkte und werde zum Musik-Champion. Jetzt kostenlos spielen!";
const keywords =
  "Musik Quiz, Musikspiel, Song Quiz, Künstler Quiz, Online Musikquiz, Musik Trivia, Melody Mind, Musik Ratespiel";
---

<Layout
  title="Wilkommen zu Melody Mind"
  title={title}
  description={description}
  keywords={keywords}
  showHeader={false}
>
  <div class="container">
    <Picture
      class="logo"
      src="/melody-mind.png"
      width={480}
      height={480}
      formats={["avif", "webp"]}
      alt="Melody Mind Logo - Musikquiz App Logo"
      loading="eager"
    />

    <h1 class="headline">
      Willkommen zu MelodyMind – dem ultimativen Musik-Quiz!
    </h1>

    <p class="text">
      Teste dein Wissen über deine Lieblingssongs, -alben und -künstler aus
      verschiedenen Musikrichtungen. Stelle dich spannenden Fragen zu Künstlern,
      Alben und Musikfakten. Sammle Punkte, gewinne goldene Schallplatten und
      kämpfe dich in die Top 10 der Bestenliste.
    </p>

    <p class="text">
      Starte jetzt ein neues Spiel, wähle dein Genre und zeige, dass du der
      wahre Meister der Musik bist!
    </p>

    <h2 class="headline">Anmelden mit</h2>

    <nav class="buttonGroup" aria-label="Login-Optionen">
      <a class="button" href="/login/spotify" aria-label="Mit Spotify anmelden">
        <Icon
          class="loginIcon"
          name="spotify"
          width={35}
          height={35}
          aria-hidden="true"
        />
        <span>Spotify</span>
      </a>
      <a class="button" href="/login/github" aria-label="Mit GitHub anmelden">
        <Icon
          class="loginIcon"
          name="github"
          width={35}
          height={35}
          aria-hidden="true"
        />
        <span>GitHub</span>
      </a>
      <a class="button" href="/login/google" aria-label="Mit Google anmelden">
        <Icon
          class="loginIcon"
          name="google"
          width={35}
          height={35}
          aria-hidden="true"
        />
        <span>Google</span>
      </a>
      <a class="button" href="/login/yahoo" aria-label="Mit Yahoo anmelden">
        <Icon
          class="loginIcon"
          name="yahoo"
          width={35}
          height={35}
          aria-hidden="true"
        />
        <span>Yahoo</span>
      </a>
    </nav>
  </div>
</Layout>

<style lang="scss">
  .container {
    max-width: var(--max-line-length);
    margin: 0 auto;
    padding: var(--padding-large);
    text-align: center;
  }

  .logo {
    width: 100%;
    max-width: 320px;
    height: auto;
    margin: var(--padding-large) auto;

    transition: transform var(--transition-speed);
  }

  .headline {
    margin: var(--padding-medium) 0;

    font-size: var(--header-font-size);
    font-weight: 700;
    color: var(--text-color);
    letter-spacing: var(--spacing-text);
  }

  .text {
    margin: var(--padding-medium) 0;

    font-size: var(--body-font-size);
    font-weight: 400;
    line-height: var(--line-height-body);
    color: var(--text-color);
    letter-spacing: var(--spacing-text);
  }

  .buttonGroup {
    display: flex;
    flex-wrap: wrap;
    gap: var(--padding-medium);
    justify-content: center;

    margin-top: var(--padding-medium);
  }

  .button {
    display: inline-flex;
    align-items: center;

    min-width: var(--min-touch-target);
    min-height: var(--min-touch-target);
    padding: var(--padding-small) var(--padding-large);

    font-size: var(--button-font-size);
    font-weight: 600;
    color: var(--button-text-color);
    text-decoration: none;

    background-color: var(--highlight-color);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);

    transition: all var(--transition-speed);

    &:hover {
      transform: scale(1.05);
      background-color: var(--button-hover-color);
    }

    &:focus-visible {
      transform: none;
      outline: var(--focus-outline-width) solid var(--focus-outline-color);
      outline-offset: var(--focus-outline-offset);
    }
  }

  .loginIcon {
    margin-right: var(--padding-small);
  }

  @media (width <= 1024px) {
    .buttonGroup {
      gap: var(--padding-small);
    }
  }

  @media (width <= 768px) {
    .buttonGroup {
      flex-direction: column;
      gap: var(--padding-small);
    }
  }

  /* Reduzierte Bewegung */
  @media (prefers-reduced-motion: reduce) {
    .button:hover {
      transform: none;
    }

    .logo {
      transition: none;
    }
  }

  /* Hoher Kontrast */
  @media (prefers-contrast: high) {
    .button {
      border: 2px solid var(--text-color);
    }
  }
</style>
