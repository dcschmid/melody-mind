{
  "name": "cover-shuffle",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && yarn add sharp --ignore-engines; astro build --remote",
    "preview": "astro preview",
    "astro": "astro",
    "lint:scss": "stylelint \"src/**/*.{astro,scss,svelte}\"",
    "lint": "prettier --write  \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\" && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,astro}": "eslint --fix",
    "*.{css,scss,astro}": "stylelint --fix",
    "*.{html,json,md,mdx,astro}": "prettier --write"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/db": "^0.14.0",
    "@astrojs/node": "^8.3.3",
    "@astropub/flow": "^0.4.0",
    "@fontsource/source-sans-pro": "^5.0.8",
    "@playform/compress": "^0.1.1",
    "arctic": "^1.9.2",
    "astro": "^4.15.1",
    "astro-icon": "^1.1.1",
    "js-confetti": "^0.12.0",
    "lucia": "^3.2.0",
    "lucia-adapter-astrodb": "^0.1.0",
    "oslo": "^1.2.1",
    "sharp": "^0.33.5",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@double-great/stylelint-a11y": "^3.0.2",
    "@tinkoff/stylelint-config": "^4.0.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.77.8",
    "stylelint": "^16.9.0",
    "stylelint-config-clean-order": "^6.1.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-prettier": "^5.0.2"
  }
}
