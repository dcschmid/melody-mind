{
  "name": "melody-mind",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Music knowledge articles for MelodyMind",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "node dist/server/entry.mjs",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' astro check && NODE_OPTIONS='--max-old-space-size=4096' astro build",
    "build:production": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=4096' yarn build",
    "preview": "astro preview",
    "lint": "yarn format && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "lint:check": "eslint \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "lint:css": "stylelint \"src/**/*.{astro,css}\"",
    "lint:css:fix": "stylelint \"src/**/*.{astro,css}\" --fix",
    "check:scoped-css": "node scripts/check_scoped_css.mjs",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,astro,md,mdx}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,astro,md,mdx}\"",
    "convert-images": "python3 scripts/convert_pngs.py",
    "convert-images:exec": "python3 scripts/convert_pngs.py --execute --quality 80 --width 1024",
    "convert-images:exec:delete": "python3 scripts/convert_pngs.py --execute --delete --quality 80 --width 1024",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.10",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@fontsource/atkinson-hyperlegible": "^5.2.8",
    "@playform/compress": "^0.2.1",
    "astro": "^5.17.1",
    "astro-capo": "^0.0.1",
    "astro-icon": "^1.1.5",
    "astro-meta-tags": "^0.4.0",
    "astro-robots-txt": "^1.0.0",
    "date-fns": "^4.1.0",
    "jimp": "^1.5.3",
    "jpeg-js": "^0.4.4",
    "lightningcss": "^1.31.1",
    "pngjs": "^7.0.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@double-great/stylelint-a11y": "3.4.1",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mdast-util-to-string": "^4.0.0",
    "postcss-html": "1.8.1",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "17.1.0",
    "stylelint-config-recess-order": "7.6.0",
    "stylelint-config-standard": "40.0.0",
    "stylelint-high-performance-animation": "2.0.0",
    "stylelint-no-unsupported-browser-features": "8.0.5",
    "stylelint-order": "7.0.1",
    "stylelint-plugin-logical-css": "1.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "lint-staged": {
    "src/content/knowledge-en/**/*.{md,mdx}": [
      "node scripts/check_content.mjs",
      "prettier --write"
    ],
    "src/**/*.{astro,css}": [
      "stylelint --fix"
    ],
    "src/**/*.{astro,ts,tsx,js}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ]
  },
  "packageManager": "yarn@1.22.22",
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ]
}
