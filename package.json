{
  "name": "cover-shuffle",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "start:production": "node dist/server/entry.mjs",
    "build": "yarn install:sharp && yarn build:astro",
    "install:sharp": "yarn add sharp --ignore-engines",
    "build:astro": "NODE_OPTIONS='--max-old-space-size=6144 --max-semi-space-size=64 --expose-gc' astro build --remote",
    "build:check": "NODE_OPTIONS='--max-old-space-size=4096' astro check --typescript-errors=false",
    "build:full": "yarn build:check && yarn build",
    "build:fast": "NODE_OPTIONS='--max-old-space-size=4096' astro build --remote",
    "install:production": "yarn install --production --frozen-lockfile",
    "build:production": "yarn install:sharp && NODE_ENV=production NODE_OPTIONS='--max-old-space-size=6144' astro build --remote",
    "build:preview": "yarn build && astro preview",
    "deploy": "yarn build:production && yarn install:production",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "yarn format && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "lint:check": "eslint \"src/**/*.{js,ts,jsx,tsx,astro}\" --format unix",
    "lint:astro": "eslint \"src/**/*.astro\" --format unix",
    "lint:ts": "eslint \"src/**/*.ts\" --format unix",
    "lint:wcag": "eslint \"src/components/**/*.{js,ts,jsx,tsx,astro}\" --format unix --rule \"jsx-a11y/*: error\"",
    "test:a11y": "npx axe http://localhost:3000 --tags wcag2aaa --browser",
    "test:prettier": "node scripts/test-prettier.cjs",
    "format": "prettier --write \"{src,docs}/**/*.{js,ts,jsx,tsx,astro,md,mdx}\"",
    "format:check": "prettier --check \"{src,docs}/**/*.{js,ts,jsx,tsx,astro,md,mdx}\"",
    "prepare": "husky",
    "setup": "node scripts/setup-project.cjs",
    "setup-fonts": "node scripts/copy-local-fonts.cjs || node scripts/setup-fonts.cjs",
    "generate-og": "node scripts/generate-og-images.cjs",
    "generate-og-images": "node scripts/setup-fonts.cjs && node scripts/generate-og-images.cjs",
    "db:setup": "node db-setup-wrapper.mjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro}": "eslint --fix",
    "*.{html,json,md,mdx,astro}": "prettier --write"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^6.3.5",
    "@astrojs/node": "^9.4.0",
    "@astrojs/sitemap": "^3.4.2",
    "@astropub/flow": "^0.4.0",
    "@fontsource/atkinson-hyperlegible": "^5.2.6",
    "@fontsource/source-sans-pro": "^5.2.5",
    "@iconify-json/mdi": "^1.2.3",
    "@libsql/client": "^0.15.10",
    "@mdi/svg": "^7.4.47",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "astro": "^5.12.9",
    "astro-capo": "^0.0.1",
    "astro-icon": "^1.1.5",
    "astro-meta-tags": "^0.4.0",
    "astro-minify-html-swc": "^0.1.7",
    "astro-robots-txt": "^1.0.0",
    "bcryptjs": "^3.0.2",
    "canvas": "^3.1.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "marked": "^16.1.2",
    "mdast-util-to-string": "^4.0.0",
    "node-fetch": "^3.3.2",
    "sharp": "^0.34.3",
    "sortablejs": "^1.15.6",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/sortablejs": "^1.15.8",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "eslint": "^9.33.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^52.0.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "postcss-html": "^1.8.0",
    "postcss-markdown": "^1.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.90.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.1.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
