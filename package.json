{
  "name": "cover-shuffle",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && yarn add sharp --ignore-engines; astro build --remote",
    "preview": "astro preview",
    "astro": "astro",
    "lint:scss": "stylelint \"src/**/*.{astro,scss,svelte}\"",
    "lint": "prettier --write  \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\" && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "prepare": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "lint-staged": {
    "*.{js,ts,astro}": "eslint --fix",
    "*.{css,scss,astro}": "stylelint --fix",
    "*.{html,json,md,mdx,astro}": "prettier --write"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/db": "^0.14.3",
    "@astrojs/node": "^8.3.4",
    "@astropub/flow": "^0.4.0",
    "@fontsource/source-sans-pro": "^5.1.0",
    "@playform/compress": "^0.1.6",
    "arctic": "^1.9.2",
    "astro": "^4.16.14",
    "astro-compressor": "^0.4.1",
    "astro-icon": "^1.1.2",
    "js-confetti": "^0.12.0",
    "lucia": "^3.2.2",
    "lucia-adapter-astrodb": "^0.2.0",
    "oslo": "^1.2.1",
    "sharp": "^0.33.5",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@double-great/stylelint-a11y": "^3.0.2",
    "@playwright/test": "^1.42.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@tinkoff/stylelint-config": "^4.0.0",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/browser": "^2.1.5",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "^2.1.5",
    "eslint": "^9.15.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "happy-dom": "^15.11.6",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.81.0",
    "stylelint": "^16.10.0",
    "stylelint-config-clean-order": "^6.1.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-prettier": "^5.0.2",
    "vitest": "^2.1.5"
  }
}
