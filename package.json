{
  "name": "melody-mind",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start:production": "NODE_ENV=production node dist/server/entry.mjs",
    "build": "yarn build:astro",
    "install:sharp": "yarn add sharp --ignore-engines",
    "build:astro": "node scripts/run-astro-build.cjs",
    "optimize:categories": "node scripts/optimize-category-images.cjs",
    "optimize:images": "node scripts/optimize-images.cjs",
    "build:check": "astro check --typescript-errors=false --ignore-engines",
    "build:full": "yarn build:check && yarn build",
    "install:production": "yarn install --production --frozen-lockfile",
    "build:production": "yarn build",
    "build:preview": "yarn build && astro preview",
    "deploy": "yarn build:production && yarn install:production",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "yarn format && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "lint:check": "eslint \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "lint:all": "eslint \"src/**/*.{js,ts,jsx,tsx,astro}\" --rule \"jsx-a11y/*: off\"",
    "test:prettier": "node scripts/test-prettier.cjs",
    "format": "prettier --write \"{src,docs}/**/*.{js,ts,jsx,tsx,astro,md,mdx}\"",
    "format:check": "prettier --check \"{src,docs}/**/*.{js,ts,jsx,tsx,astro,md,mdx}\"",
    "prepare": "husky",
    "setup": "node scripts/setup-project.cjs",
    "setup-fonts": "node scripts/copy-local-fonts.cjs || node scripts/setup-fonts.cjs",
    "generate-og": "node scripts/generate-og-images.cjs",
    "generate-og-images": "node scripts/setup-fonts.cjs && node scripts/generate-og-images.cjs",
    "sync:categories": "node scripts/sync-categories.cjs",
    "sync:knowledge-playlists": "node scripts/sync-knowledge-playlists.cjs",
    "migrate:category-images": "node scripts/migrate-category-image-slugs.cjs",
    "migrate:podcast-images": "node scripts/migrate-podcast-image-slugs.cjs",
    "migrate:knowledge-images": "node scripts/migrate-knowledge-image-slugs.cjs",
    "optimize:images:squoosh": "node scripts/optimize-images-squoosh.cjs"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro}": "eslint --fix",
    "*.{html,json,md,mdx,astro}": "prettier --write"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.8",
    "@astrojs/node": "^9.5.0",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource/atkinson-hyperlegible": "^5.2.8",
    "@tailwindcss/vite": "^4.1.16",
    "astro": "^5.15.1",
    "astro-capo": "^0.0.1",
    "astro-icon": "^1.1.5",
    "astro-meta-tags": "^0.4.0",
    "astro-robots-txt": "^1.0.0",
    "date-fns": "^4.1.0",
    "sharp": "^0.34.4",
    "tailwind-variants": "^3.1.1",
    "tw-prose": "^0.0.10"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@eslint/js": "^9.38.0",
    "@typescript-eslint/parser": "^8.46.2",
    "astro-minify-html-swc": "^0.1.8",
    "canvas": "^3.1.2",
    "critical": "^7.2.1",
    "eslint": "^9.38.0",
    "eslint-formatter-unix": "^9.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^61.1.8",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mdast-util-to-string": "^4.0.0",
    "postcss-html": "^1.8.0",
    "postcss-markdown": "^1.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "packageManager": "yarn@1.22.22"
}
