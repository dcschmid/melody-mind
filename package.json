{
  "name": "melody-mind-knowledge",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Music knowledge articles for MelodyMind",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "node dist/server/entry.mjs",
    "build": "astro check && astro build",
    "build:production": "NODE_ENV=production yarn build",
    "preview": "astro preview",
    "lint": "yarn format && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "lint:check": "eslint \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,astro,md,mdx}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,astro,md,mdx}\""
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.8",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource/atkinson-hyperlegible": "^5.2.8",
    "@tailwindcss/vite": "^4.1.16",
    "astro": "^5.15.1",
    "astro-capo": "^0.0.1",
    "astro-icon": "^1.1.5",
    "astro-meta-tags": "^0.4.0",
    "astro-robots-txt": "^1.0.0",
    "date-fns": "^4.1.0",
    "sharp": "^0.34.4",
    "tailwind-variants": "^3.1.1",
    "tw-prose": "^0.0.10"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@eslint/js": "^9.38.0",
    "@tailwindcss/typography": "^0.5.19",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-plugin-astro": "^1.3.1",
    "mdast-util-to-string": "^4.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "packageManager": "yarn@1.22.22"
}
